@using IsraaSystem.Application.Helper
@model IsraaSystem.Application.Repository.material.MaterialService.GetAllInput



@{
    ViewBag.Title = "ادارة المخازن - ادارة الموارد";
    ViewBag.Menu = "#menu-departments";
    Layout = "~/Views/Shared/_LayoutHorizontalMenu.cshtml";
}

@section PageBreadcrumb{
    <li>
        <a href="/Repository/material">الرئيسية</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <a href="/Repository/material">الاصناف والموارد</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <a>ادارة الأصناف</a>
    </li>
}




<div class="row">
    <div class="col-md-12">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-social-dribbble font-green"></i>
                    <span class="caption-subject font-green bold uppercase">ادارة الاصناف</span>
                </div>
                <div class="actions">

                    <a href="javascript:;" data-action-Class="buttons-add" class="tool-action btn green-jungle btn-outline btn-circle">
                        <i class="fa fa-plus-square"></i>
                        اضافة جديد

                    </a>

                    <div class="btn-group">
                        <a class="btn red btn-outline btn-circle btn-sm" href="javascript:;" data-toggle="dropdown">
                            <i class="icon-settings "></i>
                            <span class="hidden-xs"> ادوات </span>
                            <i class="fa fa-angle-down"></i>
                        </a>
                        <ul class="dropdown-menu pull-right" id="sample_3_tools">
                            <li>
                                <a href="javascript:;" data-action-class="buttons-print" class="tool-action">
                                    <i class="icon-printer"></i> طباعة
                                </a>
                            </li>
                            <li>
                                <a href="javascript:;" data-action-class="buttons-copy" class="tool-action">
                                    <i class="icon-check"></i> نسخ
                                </a>
                            </li>
                            <li>
                                <a href="javascript:;" data-action-class="buttons-pdf" class="tool-action">
                                    <i class="icon-doc"></i> PDF
                                </a>
                            </li>
                            <li>
                                <a href="javascript:;" data-action-class="buttons-excel" class="tool-action">
                                    <i class="icon-paper-clip"></i> Excel
                                </a>
                            </li>
                            <li>
                                <a href="javascript:;" data-action-class="buttons-csv" class="tool-action">
                                    <i class="icon-cloud-upload"></i> CSV
                                </a>
                            </li>


                        </ul>
                    </div>
                </div>
            </div>
            <div class="portlet-body">



                <div class="table-container">
                    <table class="table table-striped table-bordered table-hover " id="datatable_ajax">
                        <thead>
                            <tr role="row" class="heading">
                                <th>كود الصنف</th>
                                <th>اسم الصنف</th>
                                <th>النوع</th>
                                <th>الوحدة</th>
                                <th class="numeric">السعر</th>
                                <th>حد الطلب</th>
                                <th>حالة المنتج</th>
                                <th>مستهلك</th>
                                <th>فعال</th>
                                <th>ادوات</th>
                            </tr>
                            <tr role="row" class="heading">
                                <th>
                                    @Html.TextBoxFor(model => model.Code, new { @class = "form-control form-filter input-small" })
                                    @*<input type="text" class=" form-filter form-control input-small" name="Code" />*@
                                </th>
                                <th>
                                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control form-filter input-small" })
                                    @*<input type="text" class=" form-filter form-control input-small" name="Name" />*@
                                </th>
                                <th>
                                    @Html.DropDownListFor(model => model.TypeID, DropDownHelpper.MaterialType(), "اختر", new { @class = "Select2 form-filter form-control" })
                                    @*<input type="text" class=" form-filter form-control input-small" name="MaterialTypeId" />*@
                                </th>
                                <th>
                                    @Html.DropDownListFor(model => model.UnitId, DropDownHelpper.MaterialUnit(), "اختر", new { @class = "Select2 form-filter form-control" })
                                </th>
                                <th>
                                    @Html.TextBoxFor(model => model.PriceFrom, new { @class = "form-control form-filter input-xsmall", @placeholder = "من" })
                                    @Html.TextBoxFor(model => model.PriceTo, new { @class = "form-control form-filter input-xsmall", @placeholder = "الى" })
                                    @*<input type="text" placeholder="من" class=" form-filter form-control input-xsmall margin-bottom-5 " name="PriceFrom" />*@
                                    @*<input type="text" placeholder="الى" class=" form-filter form-control input-xsmall " name="PriceTo" />*@
                                </th>
                                <th>
                                    @Html.TextBoxFor(model => model.RequestLimit, new { @class = "form-control form-filter input-xsmall" })
                                    @*<input type="text" class=" form-filter form-control input-xsmall" name="RequestLimit" />*@
                                </th>
                                <th>
                                    @*@Html.CheckBoxFor(model => model.UsageStatus, new { @data_toggle = "toggle", @class = "toggle-checkbox form-filter input-xsmall" })*@
                                    <select id="UsageStatus" name="UsageStatus" class="form-filter form-control input-xsmall">
                                        <option>اختر</option>
                                        <option value="1">جديد</option>
                                        <option value="0">مستخدم</option>
                                    </select>
                                </th>
                                <th>
                                    @*@Html.CheckBoxFor(model => model.IsConsumed, new { @data_toggle = "toggle", @class = "toggle-checkbox form-filter input-xsmall" })*@
                                    <select id="IsConsumed" name="IsConsumed" class="form-filter form-control input-xsmall">
                                        <option>اختر</option>
                                        <option value="1">مستهلك</option>
                                        <option value="0">غير مستهلك</option>
                                    </select>
                                </th>
                                <th>
                                    @*@Html.CheckBoxFor(model => model.IsActive, new { @data_toggle = "toggle", @class = "toggle-checkbox form-filter input-xsmall" })*@
                                    <select id="IsActive" name="IsActive" class="form-filter form-control input-xsmall">
                                        <option>اختر</option>
                                        <option value="1">فعال</option>
                                        <option value="0">غير فعال</option>
                                    </select>
                                </th>
                                <th>
                                    <button id="btnSearch" class="btn-block btn btn-sm green  filter-submit margin-bottom-5">
                                        <i class="fa fa-search"></i> بحث
                                    </button>
                                    <button class=" btn-block btn btn-sm red btn-outline filter-cancel">
                                        <i class="fa fa-times"></i> افراغ
                                    </button>
                                </th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section PageStyles {
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <link href="~/assets/global/plugins/datatables/datatables.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap-rtl.css" rel="stylesheet" type="text/css" />
