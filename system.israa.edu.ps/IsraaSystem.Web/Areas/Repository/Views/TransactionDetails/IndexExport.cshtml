@using IsraaSystem.Application.Repository.transaction
@model IsraaSystem.Application.Repository.transaction.TransactionDetailsDto



@{
    ViewBag.Title = "ادارة المخازن - تفاصيل / الصادر";
    ViewBag.Menu = "#menu-transaction";
    ViewBag.subMenu = "#menu-import";
    Layout = "~/Views/Shared/_LayoutHorizontalMenu.cshtml";
}

@section PageBreadcrumb{
    <li>
        <a href="/Repository/material">الرئيسية</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <a href="/Repository/Transaction/IndexExport">حركات المخزن</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <a>تفاصيل الصادرات</a>
    </li>
}


<div id="refresh-list"></div>
<div class="row">
    <div class="col-md-12">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-social-dribbble font-green"></i>
                    <span class="caption-subject font-green bold uppercase">تفاصيل &nbsp;</span>
                    <small>
                        رمز الحركة :
                        @Html.DisplayTextFor(model => model.TransactionId)
                    </small>
                    @*<span class="caption-subject font-green bold uppercase">></span>
            <span class="caption-subject bold uppercase" style="color:black;">نوع الحركة :</span>
            <span class="caption-subject bold" style="color:black;">
                @Model.TransactionTypeName
            </span>*@
                    @Html.HiddenFor(model => model.TransactionId)
                </div>
                <div class="actions">

                    <a href="javascript:;" data-action-Class="buttons-add" class="tool-action btn green-jungle btn-outline btn-circle">
                        <i class="fa fa-plus-square"></i>
                        اضافة جديد

                    </a>
                    <a href="/Repository/Transaction/IndexExport" class="btn btn-circle green btn-outline btn-sm">
                        <i class="fa fa-reply"></i>
                        عودة للحركات
                    </a>
                    <div class="btn-group">
                        <a class="btn red btn-outline btn-circle btn-sm" href="javascript:;" data-toggle="dropdown">
                            <i class="icon-settings "></i>
                            <span class="hidden-xs"> ادوات </span>
                            <i class="fa fa-angle-down"></i>
                        </a>
                        <ul class="dropdown-menu pull-right" id="sample_3_tools">
                            <li>
                                <a href="javascript:;" data-action-class="buttons-print" class="tool-action">
                                    <i class="icon-printer"></i> طباعة
                                </a>
                            </li>
                            <li>
                                <a href="javascript:;" data-action-class="buttons-copy" class="tool-action">
                                    <i class="icon-check"></i> نسخ
                                </a>
                            </li>
                            <li>
                                <a href="javascript:;" data-action-class="buttons-pdf" class="tool-action">
                                    <i class="icon-doc"></i> PDF
                                </a>
                            </li>
                            <li>
                                <a href="javascript:;" data-action-class="buttons-excel" class="tool-action">
                                    <i class="icon-paper-clip"></i> Excel
                                </a>
                            </li>
                            <li>
                                <a href="javascript:;" data-action-class="buttons-csv" class="tool-action">
                                    <i class="icon-cloud-upload"></i> CSV
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <br /><br /><br />
            <div class="portlet-body">
                <table class="table table-striped table-bordered table-hover " id="datatable_ajax">
                    <thead>
                        <tr role="row" class="heading">
                            <th class="text-nowrap">قسم المخزن</th>
                            <th class="text-nowrap">الصنف</th>
                            <th class="text-nowrap">الوحدة</th>
                            <th class="text-nowrap">الكمية</th>
                            <th class="text-nowrap">فعال</th>
                            <th class="text-nowrap">ادوات</th>
                        </tr>

                    </thead>

                </table>

            </div>
        </div>
    </div>
</div>



@section PageStyles {
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <link href="~/assets/global/plugins/datatables/datatables.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap-rtl.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/global/plugins/bootstrap-datepicker/css/bootstrap-datepicker3.css" rel="stylesheet" />
    <!-- END PAGE LEVEL PLUGINS -->

    <style>
        .dt-button-collection {
            width: 50% !important;
        }

            .dt-button-collection a {
                width: 49% !important;
                float: left !important;
            }

        div.dt-button-collection {
            border: 1px solid #d4c1c1 !important;
            box-shadow: unset !important;
            padding: 0 !important;
        }

        .filter {
            background-color: cornsilk;
        }


        .form-control[disabled], .form-control[readonly], fieldset[disabled] .form-control {
            background-color: #ffffff !important;
        }

        #israa-table {
            margin: unset;
        }
    </style>
}

@section PagePlugins {
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <script src="~/assets/global/scripts/datatable.js" type="text/javascript"></script>
    <script src="~/assets/global/plugins/datatables/datatables.min.js" type="text/javascript"></script>
    <script src="~/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js" type="text/javascript"></script>
    <script src="http://cdn.datatables.net/plug-ins/1.10.19/dataRender/datetime.js" type="text/javascript"></script>
    <!-- END PAGE LEVEL PLUGINS -->
}

@section PageScripts {

    <!-- BEGIN PAGE LEVEL SCRIPTS -->
    <script src="~/Areas/Repository/Scripts/transactionDetails/IndexExport.js"></script>
    <!-- END PAGE LEVEL SCRIPTS -->

}