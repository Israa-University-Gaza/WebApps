@using IsraaSystem.Application.Helper
@model IsraaSystem.Web.Areas.Repository.Models.import.DistributionVM

@{
    Layout = null;
}

<div id="add-Import" class="modal-content">

    @{
        AjaxOptions opt = new AjaxOptions
        {
            InsertionMode = InsertionMode.ReplaceWith,
            HttpMethod = "POST",
            UpdateTargetId = "add-Import",
            OnSuccess = "ModelHideFormSubmit"
        };
    }

   

    @Html.Partial("_Alerts")
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">إضافة مواد للمخزن</h4>
    </div>
    <div class="modal-body modal-form">
        <div class="portlet-body form">
            @using (Ajax.BeginForm("DistributionImport", "Import", opt, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-body">

                    <div class="form-group">
                        <label class="col-md-3 control-label">اسم الصنف</label>
                        <div class="col-md-8">
                         @Html.TextBoxFor(model => model.ImportDto.Material.Name, new {@class = "form-control text-center",@readonly= "readonly"})
                            @Html.HiddenFor(model => model.ImportDto.Id)
                            @Html.HiddenFor(model => model.ImportDto.SupplierId)
                            @Html.HiddenFor(model => model.ImportDto.QuantityPrice)
                            @Html.HiddenFor(model => model.ImportDto.DateOfImport)
                            @Html.HiddenFor(model => model.ImportDto.MaterialId)
                            @Html.HiddenFor(model => model.TransactionDto.MaterialId)
                            @Html.HiddenFor(model => model.TransactionDto.ImportId)

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">الكمية الاساسية</label>
                        <div class="col-md-8">
                            @Html.TextBoxFor(model => model.ImportDto.Quantity, new { @class = "form-control text-center", @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">الكمية المتوفرة</label>
                        <div class="col-md-8">
                            @Html.TextBoxFor(model => model.ImportDto.RemainingQuantity, new { @class = "form-control text-center", @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">القسم</label>
                        <div class="col-md-8">
                            @Html.DropDownListFor(model => model.TransactionDto.DepartmentId, DropDownHelpper.Departments(), "اختر القسم المورد له", new { @class = "form-control select2" })
                            @Html.ValidationMessageFor(model => model.TransactionDto.DepartmentId, "", new { @class = "text-danger help-block" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">الكمية</label>
                        <div class="col-md-8">
                            @Html.TextBoxFor(model => model.TransactionDto.Quantity, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.TransactionDto.Quantity, "", new { @class = "text-danger help-block" })
                        </div>
                    </div>
                
                   
                    <div class="form-group">
                        <label class="col-md-3 control-label">فعال</label>
                        <div class="col-md-8">
                            @Html.CheckBoxFor(model => model.TransactionDto.IsActive, new { @data_toggle = "toggle", @class = "toggle-checkbox" })
                        </div>
                    </div>
                </div>
                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-offset-3 col-md-8">

                            <input id="submit" type="submit" class="btn btn-primary" value="حفظ">
                            <button type="button" class="btn btn-danger" data-dismiss="modal">إلغاء</button>

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</div>


<script>
  $(function () {

    $('.toggle-checkbox').bootstrapToggle();

  });

  function ModelHideFormSubmit () {
    $('.modal').modal('hide');

  }


</script>
