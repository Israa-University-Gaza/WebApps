@model List<IsraaSystem.Application.Repository.import.ImportDto>

@{
  Layout = null;
}

<div id="israa-list">
  <div id="refresh-list"></div>

  @{
    AjaxOptions opt = new AjaxOptions
    {
      InsertionMode = InsertionMode.ReplaceWith,
      HttpMethod = "POST",
      UpdateTargetId = "israa-list"
    };
  }

  @using (Ajax.BeginForm("List", null, opt, new { @id = "israa-form" }))
  {
    <div class="form">
      <div class="form-horizontal">
        @Html.AntiForgeryToken()

      </div>
    </div>
    <br />
    if (Model != null && Model.Count > 0)
    {
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th class="">#</th>
            <th class="">الصنف</th>
            <th class="text-center">الكمية</th>
            <th class="text-center">الكميةالمتبقية</th>
            <th class="text-center">السعر</th>
            <th class="text-center">تاريخ التوريد</th>           
            <th class="text-center">فعال</th>
            @*<th class="wp5"></th>*@
            @*  *@
          </tr>
        </thead>
        <tbody>
          @foreach (var item in Model)
          {
            <tr>
              <td></td>
              <td>@item.Material.Name</td>
              <td class="text-center">@item.Quantity</td>
                <td class="text-center">@item.RemainingQuantity</td>
              <td class="text-center">@item.QuantityPrice</td>
                <td class="text-center">@item.DateOfImport.Value.ToString("dd/MM/yyyy HH:mm")</td>             
              <td class="text-center td-cb">
                <div class="md-checkbox has-success">
                  <input type="checkbox" id="checkbox@(item.Id)" @(item.IsActive ? "checked='checked'" : "") class="md-check cb-activation" data-url="/HumanResource/Department/Activate/@item.Id" data-target-id="#refresh-list">
                  <label for="checkbox@(item.Id)">
                    <span></span>
                    <span class="check"></span>
                    <span class="box"></span>
                  </label>
                </div>
              </td>
            </tr>
          }
        </tbody>
      </table>
      @*@Html.Partial("_paging", Model.pagging)*@
    }
    else
    {
      <div class="alert alert-info alert-dismissible text-center" role="alert">
        <span>لا يوجد بيانات لعرضها</span>
      </div>
    }
  }
</div>