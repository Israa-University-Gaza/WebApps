@using IsraaSystem.Application.Helper
@using IsraaSystem.Application.Repository.transaction
@model IsraaSystem.Application.Repository.transaction.RepoTransactionService.GetAllTransactionDetailsInput
@*@model IsraaSystem.Web.Areas.Repository.Models.transaction.GetAllTransactionDetailsVM*@
@using IsraaSystem.Application.HumanResource
@using IsraaSystem.DataAccess.Sql.HumanResource



@{
    ViewBag.Title = "ادارة المخازن - احصائية المخزن";
    ViewBag.Menu = "#menu-transaction";
    ViewBag.subMenu = "#menu-import";
    Layout = "~/Views/Shared/_LayoutHorizontalMenu.cshtml";
}

@section PageBreadcrumb{
    <li>
        <a href="/Repository/material">الرئيسية</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <a href="/Repository/Transaction">حركات المخزن</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <a>تفاصيل بطاقة الصنف </a>
    </li>
}


<div id="refresh-list"></div>
<div class="row">
    <div class="col-md-12">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-social-dribbble font-green"></i>
                    <span class="caption-subject font-green bold uppercase">تفاصيل بطاقة الصنف</span>

                </div>
                <div class="actions">
                    <div class="btn-group">
                        <a class="btn red btn-outline btn-circle btn-sm" href="javascript:;" data-toggle="dropdown">
                            <i class="icon-settings "></i>
                            <span class="hidden-xs"> ادوات </span>
                            <i class="fa fa-angle-down"></i>
                        </a>
                        <ul class="dropdown-menu pull-right" id="sample_3_tools">
                            <li>
                                <a href="javascript:;" data-action-class="buttons-print" class="tool-action">
                                    <i class="icon-printer"></i> طباعة
                                </a>
                            </li>
                            <li>
                                <a href="javascript:;" data-action-class="buttons-copy" class="tool-action">
                                    <i class="icon-check"></i> نسخ
                                </a>
                            </li>
                            <li>
                                <a href="javascript:;" data-action-class="buttons-pdf" class="tool-action">
                                    <i class="icon-doc"></i> PDF
                                </a>
                            </li>
                            <li>
                                <a href="javascript:;" data-action-class="buttons-excel" class="tool-action">
                                    <i class="icon-paper-clip"></i> Excel
                                </a>
                            </li>
                            <li>
                                <a href="javascript:;" data-action-class="buttons-csv" class="tool-action">
                                    <i class="icon-cloud-upload"></i> CSV
                                </a>
                            </li>


                        </ul>
                    </div>
                </div>
                @Html.HiddenFor(model => model.MaterialId, new { @class = "form-filter" })

            </div>
            <div class="portlet-body">
                <div class="note note-info">
                    <div class="row">
                        <div class="col-md-8">
                            <h4 class="block uppercase">
                                <strong>الصنف </strong>&nbsp:&nbsp; @Model.MaterialName
                                <br /><br />
                                <strong>الرصيد المتوفر في المخزون </strong>&nbsp:&nbsp; @Model.QuantityBalanc
                            </h4>
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-bordered table-hover " id="datatable_ajax">
                    <thead>
                        <tr role="row" class="heading">
                            <th class="text-nowrap">نوع الحركة</th>
                            <th class="text-nowrap">تاريخ الحركة</th>
                            <th class="text-nowrap"> الكمية</th>
                            <th class="text-nowrap">من القسم</th>
                            <th class="text-nowrap">الى القسم</th>
                            <th class="text-nowrap">السعر</th>
                            <th class="text-nowrap">جهة التوريد</th>
                            <th class="text-nowrap">جهة الصرف</th>
                            <th class="text-nowrap">الكمية بعد الجرد</th>
                            <th class="text-nowrap">أدوات</th>
                        </tr>
                        <tr role="row" class="heading">
                            <th>
                                @Html.DropDownListFor(model => model.TransactionTypeName, DropDownHelpper.TransactionTypes(), "اختر", new { @class = "Select2 form-filter form-control" })
                            </th>
                            <th>
                                @Html.TextBoxFor(model => model.TransactionDateFrom, new { @class = "form-control form-filter input-small date-picker", @placeholder = "من" })
                                @Html.TextBoxFor(model => model.TransactionDateTo, new { @class = "form-control form-filter input-small date-picker", @placeholder = "الى" })
                            </th>
                            <th>
                                @*@Html.TextBoxFor(model => model.Quantity, new { @class = "form-control form-filter input-xsmall", @placeholder = "الى" })*@
                            </th>
                            <th>
                                @Html.DropDownListFor(model => model.RepositoryDepartmentName, DropDownHelpper.Departments(), "اختر", new { @class = "Select2 form-filter form-control" })
                            </th>
                            <th>
                                @Html.DropDownListFor(model => model.ToRepositoryDepartmentName, DropDownHelpper.Departments(), "اختر", new { @class = "Select2 form-filter form-control" })
                            </th>
                            <th>
                                @Html.TextBoxFor(model => model.Price, new { @class = "form-control form-filter input-xsmall", @placeholder = "من" })
                                @Html.TextBoxFor(model => model.PriceTo, new { @class = "form-control form-filter input-xsmall", @placeholder = "الى" })
                            </th>
                            <th>
                                @Html.DropDownListFor(model => model.SupplierName, DropDownHelpper.Suppliers(), "اختر", new { @class = "Select2 form-filter form-control" })
                            </th>
                            <th>
                                @Html.DropDownListFor(model => model.DepartmentId, SelectDA.ddlDepartments(), "اختر", new { @class = "Select2 form-filter form-control" })
                            </th>
                            <th>
                            </th>
                            <th>
                                <button id="btnSearch" class="btn-block btn btn-sm green  filter-submit margin-bottom-5">
                                    <i class="fa fa-search"></i> بحث
                                </button>
                                <button class=" btn-block btn btn-sm red btn-outline filter-cancel">
                                    <i class="fa fa-times"></i> افراغ
                                </button>
                            </th>
                        </tr>
                    </thead>

                </table>

            </div>
        </div>
    </div>
</div>



