
@using IsraaSystem.Application.Helper
@using IsraaSystem.DataAccess.Sql.Academic

@{
    /**/

    ViewBag.Title = "الشؤون الأكاديمية - إدارة المعادلات ";
    ViewBag.Menu = "#menu-transformation";
    ViewBag.subMenu = "#menu-transformation";
    Layout = "~/Views/Shared/_LayoutHorizontalMenu.cshtml";
}







@section PageBreadcrumb{
    <li>
        <a href="/Academic/Dashboard">الرئيسية</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <a href="/Academic/OfferdCourse">إدارة المعادلات</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <a> عرض المعادلات</a>
    </li>
}


<div id="refresh-list"></div>
<div class="row">


    <div class="portlet light bordered">
        <div class="portlet-title">
            <div class="caption">
                <i class="icon-social-dribbble font-green"></i>
                <span class="caption-subject font-green bold uppercase"> ادارة المعادلات</span>
            </div>
            <div class="actions">



                <div class="btn-group">
                    <a class="btn red btn-outline btn-circle btn-sm" href="javascript:;" data-toggle="dropdown">
                        <i class="icon-settings "></i>
                        <span class="hidden-xs"> ادوات </span>
                        <i class="fa fa-angle-down"></i>
                    </a>
                    <ul class="dropdown-menu pull-right" id="sample_3_tools">
                        <li>
                            <a href="javascript:;" data-action-class="buttons-print" class="tool-action">
                                <i class="icon-printer"></i> طباعة
                            </a>
                        </li>
                        <li>
                            <a href="javascript:;" data-action-class="buttons-copy" class="tool-action">
                                <i class="icon-check"></i> نسخ
                            </a>
                        </li>
                        <li>
                            <a href="javascript:;" data-action-class="buttons-pdf" class="tool-action">
                                <i class="icon-doc"></i> PDF
                            </a>
                        </li>
                        <li>
                            <a href="javascript:;" data-action-class="buttons-excel" class="tool-action">
                                <i class="icon-paper-clip"></i> Excel
                            </a>
                        </li>
                        <li>
                            <a href="javascript:;" data-action-class="buttons-csv" class="tool-action">
                                <i class="icon-cloud-upload"></i> CSV
                            </a>
                        </li>


                    </ul>
                </div>
            </div>


        </div>
        <div class="portlet-body">
            <div class="table-container">

                <div class="table-actions-wrapper">
                    <span> </span>

                    <select class="table-group-action-input form-control input-inline ">
                        <option value="">اختر اجراء ...</option>

                        <option value="TransformationAccreditation">قبول</option>
                        <option class="font-red" value="TransformationCancel">ارجاع للتعديل</option>
                        @*<option  class="font-red" value="TransformationCancelForStudent">ارجاع بطلب من الطالب</option>*@

                    </select>
                    <button class="btn  green table-group-action-submit">
                        <i class="fa fa-check"></i> تنفيذ
                    </button>
                </div>
                <span> </span>

                <table class="table table-striped table-bordered table-hover table-checkable" id="datatable_ajax">
                    <thead>
                        <tr>
                            <th rowspan="2" width="2%">
                                <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">
                                    <input type="checkbox" class="group-checkable" data-set="#sample_2 .checkboxes" />
                                    <span></span>
                                </label>
                            </th>
                            <th rowspan="2"> رقم الطالب</th>
                            <th rowspan="2"> اسم الطالب </th>
                            <th rowspan="2"> القسم</th>
                            <th rowspan="2"> نوع الطالب</th>
                            <th rowspan="2"> عدد الساعات</th>
                            <th rowspan="2"> ساعات خارجية معتمدة </th>
                            <th rowspan="2"> عدد ساعات الخطة</th>
                            <th colspan="2" class="text-center"> اعتماد </th>
                            <th rowspan="2"> ادوات </th>
                        </tr>
                        <tr>
                            <th class="text-center">عميد</th>
                            <th class="text-center">نائب</th>
                        </tr>

                    </thead>
                    <tbody> </tbody>





                </table>
            </div>
        </div>
    </div>
</div>


@section PageStyles {
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <link href="~/assets/global/plugins/datatables/datatables.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap-rtl.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/global/plugins/bootstrap-datepicker/css/bootstrap-datepicker3.css" rel="stylesheet" />
    <link href="~/assets/global/plugins/datatables/select.dataTables.css" rel="stylesheet" />
    <!-- END PAGE LEVEL PLUGINS -->
    <style>
        option.select-hr {
            border-bottom: 1px dotted #000;
        }
    </style>
}

@section PagePlugins {
    <script src="~/assets/global/scripts/datatable.js" type="text/javascript"></script>
    <script src="~/assets/global/plugins/datatables/datatables.min.js" type="text/javascript"></script>
    <script src="~/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js" type="text/javascript"></script>
    <script src="~/assets/global/plugins/cascading-dropdown/jquery.cascading-drop-down.js"></script>
}

@section PageScripts {

    <script src="~/Areas/Academic/Scripts/Transformation/Index.js"></script>

    <script>
        $(function () {
            israaApp.initSsdCascadingDropDown();
        });

        function show(param_div_id) {
            document.getElementById('main_place').innerHTML = document.getElementById(param_div_id).innerHTML;
        }
    </script>

}



