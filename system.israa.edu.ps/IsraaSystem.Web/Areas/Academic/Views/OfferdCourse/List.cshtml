@using System.Data
@model IsraaSystem.Core.Classic.Academic.OfferdCourse.OfferdCourseVM

@{
    Layout = null;
}

<div id="offerd-courses">
    <div id="refresh-list"></div>
    <div class="row">
        <div class="col-md-4" style="height:400px;overflow-y:scroll">
            @if (Model.data != null && Model.data.Rows.Count > 0)
            {
                <table class="table table-striped table-hover">
                    <tbody>
                        @foreach (DataRow row in Model.data.Rows)
                        {
                            <tr>
                                <td class="wp10 text-center">
                                    <a href="/Academic/Section/List/@row["ID"]" class="font-lg" data-ajax="true" data-ajax-method="Post" data-ajax-mode="replace-with" data-ajax-update="#offerd-course-sections"><span class="fa fa-folder-open-o"></span></a>
                                </td>
                                <td class="text-center">@row["CourseName"]</td>
                                <td class="wp20 text-center">
                                    <a href="/Academic/Section/Add/@row["ID"]" class="font-dark font-lg pop-up-lg"><span class="fa fa-plus"></span></a>
                                    <a href="/Academic/OfferdCourse/Edit/@row["ID"]" class="font-green font-lg"><span class="fa fa-check"></span></a>
                                    <a href="/Academic/OfferdCourse/Delete/@row["ID"]" class="font-red font-lg confirm" data-title="حذف مساق مطروح" data-msg="هل أنت متأكد من أنك تود حذف المساق المطروح ؟" data-action="حذف" data-ajax-update="#refresh-list"><span class="fa fa-times"></span></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info alert-dismissible text-center" role="alert">
                    <span>لا يوجد بيانات لعرضها</span>
                </div>
            }
        </div>
        <div class="col-md-8" style="border-right:1px solid #ddd; height:400px;overflow-y:scroll">
            <div id="offerd-course-sections">
                <div class="alert alert-info alert-dismissible text-center" role="alert">
                    <span>إختر المساق المطروح ليتم عرض شعبه ...</span>
                </div>
            </div>
        </div>
    </div>
</div>