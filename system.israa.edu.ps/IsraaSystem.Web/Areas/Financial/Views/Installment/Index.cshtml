    <!-- END PAGE LEVEL PLUGINS -->
}

@section PageScripts {

    <!-- BEGIN PAGE LEVEL SCRIPTS -->
    <script src="~/Areas/Financial/Scripts/Installment/Index.js"></script>
    <!-- END PAGE LEVEL SCRIPTS -->
