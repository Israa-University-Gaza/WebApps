@model IsraaSystem.Core.Classic.HumanResource.Salary.Deduction
@{
    Layout = null;
}

<div id="add-deduction" class="modal-content">
    @if (TempData["add-msg"] != null)
    {
        int status = Convert.ToInt32(TempData["add-msg"].ToString().Split(';')[0]);
        String msg = TempData["add-msg"].ToString().Split(';')[1];
        <script type="text/javascript">
            showToast("@msg", "@((status > 0) ? "success":"error")");
        </script>
        if (status > 0)
        {
            <script type="text/javascript">
                $('.modal').modal('hide');
                $("#deductions").load("/HumanResource/Deduction/List");
            </script>
        }
    }
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">اضافة خصمية جديدة</h4>
    </div>
    <div class="modal-body modal-form">
        <div class="portlet-body form">
            @{
                AjaxOptions opt = new AjaxOptions
                {
                    InsertionMode = InsertionMode.ReplaceWith,
                    HttpMethod = "POST",
                    UpdateTargetId = "add-deduction"
                };
            }
            @using (Ajax.BeginForm("Add", null, opt, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-body">
                    <div class="form-group">
                        <label class="col-md-2 control-label">نوع الخصمية</label>
                        <div class="col-md-8">
                            @Html.DropDownListFor(model => model.DeductionTypeID, new SelectList(Model.DeductionTypes, "Value", "Text"), "إختر نوع الخصمية", new { @class = "form-control select2" })
                            @Html.ValidationMessageFor(model => model.DeductionTypeID, "", new { @class = "text-danger help-block" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">الخصمية</label>
                        <div class="col-md-8">
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger help-block" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">نوع القيمة:</label>
                        <div class="col-md-8">
                            <div class="mt-radio-inline">
                                <label class="mt-radio mt-radio-outline">
                                    @Html.RadioButtonFor(model => model.RVTypeID, "1", new { @checked = "checked" })قيمة نسبية
                                    <span></span>
                                </label>
                                <label class="mt-radio mt-radio-outline">
                                    @Html.RadioButtonFor(model => model.RVTypeID, "2")قيمة عددية
                                    <span></span>
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">قيمة الخصمية</label>
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.Amount, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger help-block" })
                        </div>
                        <label class="col-md-1 control-label">العملة</label>
                        <div class="col-md-4">
                            @Html.DropDownListFor(model => model.CurrencyID, new SelectList(Model.Currencies, "Value", "Text"), "إختر العملة", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.CurrencyID, "", new { @class = "text-danger help-block" })
                        </div>
                    </div>
                </div>
                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-offset-2 col-md-8">
                            <button type="submit" class="btn btn-primary">إضافة</button>
                            <button type="button" class="btn btn-danger" data-dismiss="modal">إلغاء</button>
                            <a href="/HumanResource/Deduction/Add" class="btn btn-success pull-right" data-ajax="true" data-ajax-method="Get" data-ajax-mode="replace-with" data-ajax-update="#add-deduction">خصمية جديدة</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>