@using System.Data
@model IsraaSystem.Core.Classic.HumanResource.Vacation.EmployeeVacationTypeEdit

@{
    Layout = null;
}
<div id="update-type" class="modal-content">
    @if (TempData["update-msg"] != null)
    {
        int status = Convert.ToInt32(TempData["update-msg"].ToString().Split(';')[0]);
        String msg = TempData["update-msg"].ToString().Split(';')[1];
        <script type="text/javascript">
            showToast("@msg", "@((status > 0) ? "success":"error")");
        </script>
        if (status > 0)
        {
            <script type="text/javascript">
                $('.modal').modal('hide');
                $('#form-employee-vacation').submit();
            </script>
        }
    }
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">تعديل نوع الاجازة </h4>
    </div>
    <div class="modal-body modal-form">
        <div class="portlet-body form">


            @{
                AjaxOptions opt = new AjaxOptions
                {
                    InsertionMode = InsertionMode.ReplaceWith,
                    HttpMethod = "POST",
                    UpdateTargetId = "update-type"
                };
            }
            @using (Ajax.BeginForm("TypeUpdate", "EmployeeVacation", opt, new { @class = "form-horizontal" }))
            {

                @Html.AntiForgeryToken()

                <div class="form-body">

                    <div class="form-group">
                        <label class="col-md-2 control-label">الموظف</label>
                        <div class="col-md-8">
                            @Html.TextBoxFor(model => model.EmployeeName, new { @class = "form-control", @readonly = "readonly" })

                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-2 control-label">تاريخ بدء الاجازة</label>
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.VacationStartDate, new { @class = "form-control text-center", @readonly = "readonly" })
                        </div>

                        <label class="col-md-2 control-label">تاريخ نهاية الاجازة</label>
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.VacationEndDate, new { @class = "form-control text-center", @readonly = "readonly" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-2 control-label">عدد ايام الاجازة</label>
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.VacationDays, new { @class = "form-control text-center", @readonly = "readonly" })
                        </div>
                        <label class="col-md-2 control-label">نوع الاجازة</label>
                        <div class="col-md-3">
                            @Html.DropDownListFor(model => model.VacationTypeID, new SelectList(Model.VacationTypes, "Value", "Text"), "نوع الإجازة", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.VacationTypeID, "", new { @class = "text-danger help-block" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-2 control-label">سبب تغيير النوع</label>
                        <div class="col-md-8">
                            @Html.TextAreaFor(model => model.HumanResourceNote, new { @class = "form-control" })
                           
                        </div>
                    </div>
                </div>
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-offset-2 col-md-8">
                                <input type="submit" class="btn btn-primary" value="حفظ">
                                <button type="button" class="btn btn-danger" data-dismiss="modal">إلغاء</button>
                            </div>
                        </div>
                    </div>
            }
        </div>
    </div>
</div>