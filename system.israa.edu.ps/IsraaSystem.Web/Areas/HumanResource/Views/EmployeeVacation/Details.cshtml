@using System.Data
@model IsraaSystem.Core.Classic.HumanResource.Vacation.EmployeeVacationDetails

@{
    Layout = null;
}

<div id="employee-vacation-details" class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <div class="portlet-title">
            <div class="caption">
                <i class="icon-settings font-green"></i>
                <span class="caption-subject font-green sbold uppercase">تفاصيل إجازة الموظف</span>
            </div>
        </div>
    </div>
    <div class="modal-body modal-form">
        <div class="portlet-body form">
            <div class="form-horizontal">
                <div class="row">
                    <div class="form-body">
                        <div class="form-group">
                            <label class="col-md-2 text-right">رقم الموظف</label>
                            <div class="col-md-8">
                                @Html.TextBoxFor(model => model.EmployeeNo, new { @class = "form-control", @readonly = "readonly" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 text-right">اسم الموظف</label>
                            <div class="col-md-8">
                                @Html.TextBoxFor(model => model.EmployeeName, new { @class = "form-control", @readonly = "readonly" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 text-right">نوع الإجازة</label>
                            <div class="col-md-3">
                                @Html.TextBoxFor(model => model.VacationType, new { @class = "form-control text-center", @readonly = "readonly" })
                            </div>
                            <label class="col-md-2 text-right">ع. أيام الإجازة</label>
                            <div class="col-md-3">
                                @Html.TextBoxFor(model => model.VacationDays, new { @class = "form-control text-center", @readonly = "readonly" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 text-right">بداية الإجازة</label>
                            <div class="col-md-3">
                                @Html.TextBoxFor(model => model.VacationStartDate, new { @class = "form-control text-center", @readonly = "readonly" })
                            </div>
                            <label class="col-md-2 text-right">نهاية الإجازة</label>
                            <div class="col-md-3">
                                @Html.TextBoxFor(model => model.VacationEndDate, new { @class = "form-control text-center", @readonly = "readonly" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 text-right">الموظف البديل</label>
                            <div class="col-md-8">
                                @Html.TextBoxFor(model => model.ReplaceEmployeName, new { @class = "form-control", @readonly = "readonly" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 text-right">مكان الإجازة</label>
                            <div class="col-md-8">
                                @Html.TextBoxFor(model => model.VacationPlace, new { @class = "form-control", @readonly = "readonly" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 text-right">سبب أخذ الإجازة</label>
                            <div class="col-md-8">
                                @Html.TextAreaFor(model => model.VacationReason, new { @class = "form-control", @readonly = "readonly" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

