@model IsraaSystem.Core.Classic.HumanResource.Vacation.EmployeeVacation

@{
    Layout = null;
}

<div id="add-employee-vacation" class="modal-content">
    @if (TempData["add-msg"] != null)
    {
        int status = Convert.ToInt32(TempData["add-msg"].ToString().Split(';')[0]);
        String msg = TempData["add-msg"].ToString().Split(';')[1];
        <script type="text/javascript">
            showToast("@msg", "@((status > 0) ? "success":"error")");
        </script>
        if (status > 0)
        {
            <script type="text/javascript">
                $('.modal').modal('hide');
                $("#form-employee-vacation").load("/HumanResource/EmployeeVacation/List");
            </script>
        }
    }
    @{
        AjaxOptions opt = new AjaxOptions
        {
            InsertionMode = InsertionMode.ReplaceWith,
            HttpMethod = "POST",
            UpdateTargetId = "add-employee-vacation"
        };
    }
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">إضافة إجازة لموظف</h4>
    </div>
    <div class="modal-body modal-form">
        <div class="portlet-body form">
            @using (Ajax.BeginForm("Add", null, opt, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-body">
                    <div class="form-group">
                        <label class="col-md-2 control-label">الموظف</label>
                        <div class="col-md-8">
                            @Html.DropDownListFor(model => model.EmployeeID, new SelectList(Model.Employees, "Value", "Text"), "إختر الموظف", new { @class = "form-control select2" })
                            @Html.ValidationMessageFor(model => model.EmployeeID, "", new { @class = "text-danger help-block" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">نوع الإجازة</label>
                        <div class="col-md-3">
                            @Html.DropDownListFor(model => model.VacationTypeID, new SelectList(Model.VacationTypes, "Value", "Text"), "إختر نوع الإجازة", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.VacationTypeID, "", new { @class = "text-danger help-block" })
                        </div>
                        <label class="col-md-2 control-label">مكان الإجازة</label>
                        <div class="col-md-3">
                            @Html.DropDownListFor(model => model.VacationPlaceID, new SelectList(Model.VacationPlaces, "Value", "Text"), "إختر مكان الإجازة", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.VacationPlaceID, "", new { @class = "text-danger help-block" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">بداية الإجازة</label>
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.VacationStartDate, new { @class = "form-control text-center date-picker" })
                            @Html.ValidationMessageFor(model => model.VacationStartDate, "", new { @class = "text-danger help-block" })
                        </div>
                        <label class="col-md-2 control-label">نهاية الإجازة</label>
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.VacationEndDate, new { @class = "form-control text-center date-picker" })
                            @Html.ValidationMessageFor(model => model.VacationEndDate, "", new { @class = "text-danger help-block" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">سبب الإجازة</label>
                        <div class="col-md-8">
                            @Html.TextAreaFor(model => model.VacationReason, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.VacationReason, "", new { @class = "text-danger help-block" })
                        </div>
                    </div>
                </div>
                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-offset-2 col-md-8">
                            <button type="submit" class="btn btn-primary">إضافة</button>
                            <button type="button" class="btn btn-danger" data-dismiss="modal">إلغاء</button>
                            <a href="/HumanResource/EmployeeVacation/Add" class="btn btn-success pull-right" data-ajax="true" data-ajax-method="Get" data-ajax-mode="replace-with" data-ajax-update="#add-employee-vacation">إجازة جديدة</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>