@model IsraaSystem.Core.Classic.HumanResource.Job.JobType
@{
    Layout = null;
}
<div id="add-Job-Type" class="modal-content">
    @if (TempData["add-msg"] != null)
    {
        int status = Convert.ToInt32(TempData["add-msg"].ToString().Split(';')[0]);
        String msg = TempData["add-msg"].ToString().Split(';')[1];
        <script type="text/javascript">
            showToast("@msg", "@((status > 0) ? "success" : "error")");
        </script>
        if (status > 0)
        {
            <script type="text/javascript">
                $("#job-type").load("/HumanResource/JobType/List");
            </script>
        }
    }
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">إضافة نوع وظيفة جديد</h4>
    </div>
    <div class="modal-body modal-form">
        <div id="add-Job-Type" class="portlet-body form">
            @{
                AjaxOptions opt = new AjaxOptions
                {
                    InsertionMode = InsertionMode.ReplaceWith,
                    HttpMethod = "POST",
                    UpdateTargetId = "add-Job-Type"
                };
            }
            @using (Ajax.BeginForm("Add", "JobType", opt , new { @class = "form-horizontal" }))
            {

                @Html.AntiForgeryToken()

                <div class="form-body">
                    <div class="form-group">
                        <label class="col-md-3 control-label">اسم نوع الوظيفة باللغة العربية</label>
                        <div class="col-md-8">
                            @Html.TextBoxFor(model => model.ArName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ArName, "", new { @class = "text-danger help-block" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">اسم نوع الوظيفة باللغة الإنجليزية</label>
                        <div class="col-md-8">
                            @Html.TextBoxFor(model => model.EnName, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-offset-3 col-md-8">
                            <input type="submit" class="btn btn-primary" value="حفظ">
                            <button type="button" class="btn btn-danger" data-dismiss="modal">إلغاء</button>
                            @Ajax.ActionLink("نوع وظيفة جديدة", "Add", null, new AjaxOptions
                       {
                           InsertionMode = InsertionMode.ReplaceWith,
                           HttpMethod = "Get",
                           UpdateTargetId = "add-Job-Type"
                       }, new { @class = "btn btn-success pull-right" })
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
