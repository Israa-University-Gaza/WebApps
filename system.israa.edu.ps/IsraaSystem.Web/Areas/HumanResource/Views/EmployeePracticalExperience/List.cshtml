@using System.Data
@model IsraaSystem.Core.Classic.HumanResource.EmployeePracticalExperience.EmployeePracticalExperienceVM

@{
    Layout = null;
}

<div id="employee-practical-experience">
    @if (TempData["toast-msg"] != null)
    {
        int status = Convert.ToInt32(TempData["toast-msg"].ToString().Split(';')[0]);
        String msg = TempData["toast-msg"].ToString().Split(';')[1];
        <script type="text/javascript">
            showToast("@msg", "@((status > 0) ? "success":"error")");
        </script>
    }
    @{
        AjaxOptions opt = new AjaxOptions
        {
            InsertionMode = InsertionMode.ReplaceWith,
            HttpMethod = "POST",
            UpdateTargetId = "employee-practical-experience"
        };
    }

    @using (Ajax.BeginForm("List", "EmployeePracticalExperience", opt, new { @id = "form-employee-practical-experience" }))
    {
        <div class="form">
            <div class="form-horizontal">
                @Html.AntiForgeryToken()
                <div class="form-body">
                    <div class="form-group">
                        <label class="col-md-2 control-label">عنوان العمل</label>
                        <div class="col-md-8">
                            @Html.TextBoxFor(model => model.filter.Job, new { @class = "form-control text-center", placeholder = "عنوان العمل" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label"></label>
                        <div class="col-md-3">
                            <button type="submit" class="btn blue">تصفية</button>
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th class="wp5">#</th>
                        <th class="wp30">الموظف</th>
                        <th class="wp20 text-center">عنوان العمل</th>
                        <th class="wp20 text-center">مكان العمل</th>
                        <th class="wp15 text-center">مجال العمل</th>
                        <th class="wp10 text-center">الحالة</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (DataRow row in Model.data.Rows)
                    {
                        <tr>
                            <td>@row["RowNo"]</td>
                            <td class="text-center"><a href="/HumanResourse/Employee/Index/@row["EmployeeID"]">@row["EmployeeName"]</a></td>
                            <td class="text-center">@row["Job"]</td>
                            <td class="text-center">@row["WorkPlace"]</td>
                            <td class="text-center">@row["WorkField"]</td>
                            <td class="text-center">@row["PracticalExperienceStatus"]</td>
                        </tr>
                    }
                </tbody>
            </table>
            @Html.Partial("_paging", Model.pagging)
        </div>
    }
</div>