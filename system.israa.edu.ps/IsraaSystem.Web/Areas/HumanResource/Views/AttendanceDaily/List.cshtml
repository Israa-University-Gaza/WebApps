    @{
        AjaxOptions opt = new AjaxOptions
        {
            InsertionMode = InsertionMode.ReplaceWith,
            HttpMethod = "POST",
            UpdateTargetId = "attendance-daily"
        };
    }

    @using (Ajax.BeginForm("List", "AttendanceDaily", opt, new { @id = "form-attendance-daily" }))
    {
        <div class="form">
            <div class="form-horizontal">
                @Html.AntiForgeryToken()
                <div class="form-body">
                    <div class="form-group">
                        <label class="col-md-2 control-label">الموظف</label>
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.filter.EmployeeName, new { @class = "form-control text-center", placeholder = "رقم أو اسم الموظف" })
                        </div>
                        <label class="col-md-1 control-label">التاريخ</label>
                        <div class="col-md-2">
                            @Html.TextBoxFor(model => model.filter.AttendanceDate, new { @class = "form-control text-center date-picker", placeholder = "التاريخ" })
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn blue">تصفية</button>
                        </div>
                        <div class="col-md-2">
                            <div class="btn-group">
                                <button type="button" class="btn btn-primary">خيارات</button>
                                <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                    <i class="fa fa-angle-down"></i>
                                </button>
                                <ul class="dropdown-menu" role="menu">
                                    <li>
                                        <a href="/HumanResource/EmployeeAttendanceLate">كشف المتأخرين</a>
                                    </li>
                                    <li>
                                        <a href="/HumanResource/MissedFingerprints">كشف عدم توقيع انصراف</a>
                                    </li>
                                    <li>
                                        <a href="/HumanResource/EmployeeDateRangeStatus">كشف حالة دوام الموظف</a>
                                    </li>
                                    <li>
                                        <a href="/HumanResource/EmployeesDateStatus">كشف حالة دوام الموظفين</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br />
        if (Model.data != null && Model.data.Rows.Count > 0)
        {
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th class="wp10">رقم الموظف</th>
                        <th class="wp15">اسم الموظف</th>
                        <th class="wp12 text-center">الدوام الافتراضي</th>
                        <th class="wp12 text-center">الحضور الفعلي</th>
                        <th class="wp12 text-center">الانصراف الفعلي</th>
                        <th class="wp10 text-center">حالة الدوام</th>
                        <th class="wp10 text-center">عدد الاذونات</th>
                        <th class="wp10"></th>
                        <th class="wp10"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (DataRow row in Model.data.Rows)
                    {
                        <tr>
                            <td>@row["EmployeeNo"]</td>
                            <td><a href="/HumanResource/Employee/Index/@row["EmployeeID"]">@row["EmployeeName"]</a></td>
                            <td class="text-center">@row["DefaultFrom"] - @row["DefaultTo"]</td>
                            <td class="text-center">@row["AttendanceFrom"]</td>
                            <td class="text-center">@row["AttendanceTo"]</td>
                            <td class="text-center">@row["DayStatus"]</td>
                            <td class="text-center">@row["ExitPermissionCount"]</td>
                            <td class="text-center">
                                @if (row["ID"].ToString() != "0")
                                {
                                    <a href="/HumanResource/AttendanceDaily/Details/@row["ID"]" class="btn btn-sm btn-primary pop-up-lg"><i class="fa fa-file"></i> التفاصيل</a>
                                }
                            </td>
                            <td class="text-center">
                                <a href="/HumanResource/ManualFingerprint/EmployeeAdd/@row["EmployeeID"]" class="btn btn-sm btn-danger pop-up-lg"><i class="fa fa-edit"></i> تغير البصمة</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info alert-dismissible text-center" role="alert">
                <span>لا يوجد بيانات لعرضها</span>
            </div>
        }
    }
</div>