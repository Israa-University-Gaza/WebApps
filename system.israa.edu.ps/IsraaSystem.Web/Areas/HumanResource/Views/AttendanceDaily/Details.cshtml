@using System.Data
@model IsraaSystem.Core.Classic.HumanResource.Attendance.AttendanceDailyDetails

@{
    Layout = null;
}

<div id="attendance-daily-details" class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <div class="portlet-title">
            <div class="caption">
                <i class="icon-settings font-green"></i>
                <span class="caption-subject font-green sbold uppercase">تفاصيل دوام الموظف</span>
            </div>
        </div>
    </div>
    <div class="modal-body modal-form">
        <div class="portlet-body form">
            <div class="form-horizontal" role="form">
                <div class="row">
                    <div class="form-body">
                        <div class="form-group">
                            <label class="col-md-3 control-label">الموظف</label>
                            <div class="col-md-3">
                                @Html.TextBoxFor(model => model.EmployeeName, new { @class = "form-control text-center", @readonly = "readonly" })
                            </div>
                            <label class="col-md-2 control-label">التاريخ</label>
                            <div class="col-md-3">
                                @Html.TextBoxFor(model => model.AttendanceDate, new { @class = "form-control text-center", @readonly = "readonly" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">حضور فعلي</label>
                            <div class="col-md-3">
                                @Html.TextBoxFor(model => model.AttendanceFrom, new { @class = "form-control text-center", @readonly = "readonly" })
                            </div>
                            <label class="col-md-2 control-label">انصراف فعلي</label>
                            <div class="col-md-3">
                                @Html.TextBoxFor(model => model.AttendanceTo, new { @class = "form-control text-center", @readonly = "readonly" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">د.ت.صباحي</label>
                            <div class="col-md-3">
                                @Html.TextBoxFor(model => model.MorningLateMinutes, new { @class = "form-control text-center", @readonly = "readonly" })
                            </div>
                            <label class="col-md-2 control-label">د.ت.مسائي</label>
                            <div class="col-md-3">
                                @Html.TextBoxFor(model => model.EveningLateMinutes, new { @class = "form-control text-center", @readonly = "readonly" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">ع.د.الأذونات</label>
                            <div class="col-md-3">
                                @Html.TextBoxFor(model => model.ExitMinutes, new { @class = "form-control text-center", @readonly = "readonly" })
                            </div>
                            <label class="col-md-2 control-label">ع.د.تأخيرات أخرى</label>
                            <div class="col-md-3">
                                @Html.TextBoxFor(model => model.OtherLateMinutes, new { @class = "form-control text-center", @readonly = "readonly" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-header">
        <div class="portlet-title">
            <div class="caption">
                <i class="icon-settings font-green"></i>
                <span class="caption-subject font-green sbold uppercase">أذونات الموظف بنفس التاريخ</span>
            </div>
        </div>
    </div>
    <div class="modal-body modal-form">
        <div class="portlet-body form">
            <div class="form-horizontal" role="form">
                <div class="row">
                    <div class="form-body">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-offset-1 col-md-10">
                                    @if (Model.AttendanceExits != null && Model.AttendanceExits.Rows.Count > 0)
                                    {
                                        <table class="table table-striped table-hover">
                                            <thead>
                                                <tr>
                                                    <th class="wp5">#</th>
                                                    <th class="wp20 text-center">نوع الاذن</th>
                                                    <th class="wp20 text-center">تاريخ الاذن</th>
                                                    <th class="wp20 text-center">وقت الخروج</th>
                                                    <th class="wp20 text-center">وقت العودة</th>
                                                    <th class="wp15 text-center">حالة الإذن</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (DataRow row in Model.AttendanceExits.Rows)
                                                {
                                                    <tr>
                                                        <td>@row["RowNo"]</td>
                                                        <td class="text-center">@row["AttendanceExitType"]</td>
                                                        <td class="text-center">@row["ExitDate"]</td>
                                                        <td class="text-center">@row["ActualTimeFrom"]</td>
                                                        <td class="text-center">@row["ActualTimeTo"]</td>
                                                        <td class="text-center">@row["AttendanceExitStatus"]</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    }
                                    else
                                    {
                                        <div class="alert alert-info alert-dismissible text-center" role="alert">
                                            <span>لا يوجد بيانات لعرضها</span>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>