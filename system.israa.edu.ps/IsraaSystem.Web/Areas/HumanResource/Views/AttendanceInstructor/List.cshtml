@using System.Data
@model IsraaSystem.Core.Classic.HumanResource.Attendance.AttendanceInstructorVM

@{
    Layout = null;
}

<div id="attendance-instructor">
    @{
        AjaxOptions opt = new AjaxOptions
        {
            InsertionMode = InsertionMode.ReplaceWith,
            HttpMethod = "POST",
            UpdateTargetId = "attendance-instructor"
        };
    }

    @using (Ajax.BeginForm("List", null, opt, new { @id = "form-attendance-instructor" }))
    {
        <div class="form">
            <div class="form-horizontal">
                @Html.AntiForgeryToken()
                <div class="form-body">
                    <div class="form-group">
                        <label class="col-md-1 control-label">المحاضر</label>
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.filter.InstructorName, new { @class = "form-control text-center", placeholder = "رقم أو اسم المحاضر" })
                        </div>
                        <label class="col-md-1 control-label">التاريخ</label>
                        <div class="col-md-2">
                            @Html.TextBoxFor(model => model.filter.LectureDateFrom, new { @class = "form-control text-center date-picker", placeholder = "التاريخ" })
                        </div>
                        <div class="col-md-2">
                            @Html.TextBoxFor(model => model.filter.LectureDateTo, new { @class = "form-control text-center date-picker", placeholder = "التاريخ" })
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn blue">تصفية</button>
                        </div>
                        <div class="col-md-1">
                            @Html.DropDownListFor(model => model.pagging.pageSize, new SelectList(new Dictionary<string, int> { { "25", 25 }, { "50", 50 }, { "75", 75 }, { "100", 100 }, { "1000", 1000 } }, "Key", "Value"), new { @class = "form-control pull-right", onchange = "$('#current-page').val('1');$(this).submit();" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br />
        if (Model.data != null && Model.data.Rows.Count > 0)
        {
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th class="wp3">#</th>
                        <th class="wp8 text-center">رقم المحاضر</th>
                        <th class="wp12 text-center">اسم المحاضر</th>
                        <th class="wp10 text-center">التاريخ</th>
                        <th class="wp15 text-center">المساق</th>
                        <th class="wp8 text-center">من</th>
                        <th class="wp8 text-center">الى</th>
                        <th class="wp8 text-center">من</th>
                        <th class="wp8 text-center">الى</th>
                        <th class="wp3 text-center">ع.س المحاضرة</th>
                        <th class="wp3 text-center">ع.س الدوام</th>
                        <th class="wp3 text-center">ع.س المحاضر</th>
                        <th class="wp8 text-center"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (DataRow row in Model.data.Rows)
                    {
                        <tr>
                            <td>@row["RowNo"]</td>
                            <td class="text-center">@row["InstructorNo"]</td>
                            <td><a href="/HumanResource/Employee/Index/@row["InstructorID"]">@row["InstructorName"]</a></td>
                            <td class="text-center">@row["LectureDate"]</td>
                            <td class="text-center">@row["CourseName"]</td>
                            <td class="text-center">@row["LectureFrom"]</td>
                            <td class="text-center">@row["LectureTo"]</td>
                            <td class="text-center">@row["AttendanceFrom"]</td>
                            <td class="text-center">@row["AttendanceTo"]</td>
                            <td class="text-center">@row["LectureHours"]</td>
                            <td class="text-center">@row["AttendanceHours"]</td>
                            <td class="text-center">@row["InstructorHours"]</td>
                            <td class="text-center">
                                <a href="/HumanResource/AttendanceInstructor/Edit/@row["ID"]" class="btn btn-sm btn-primary pop-up-lg"><span class="fa fa-edit"></span></a>
                                <a href="/HumanResource/AttendanceInstructor/Delete/@row["ID"]" class="btn btn-sm btn-danger pop-up-md"><span class="fa fa-times"></span></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            @Html.Partial("_paging", Model.pagging)
        }
        else
        {
            <div class="alert alert-info alert-dismissible text-center" role="alert">
                <span>لا يوجد بيانات لعرضها</span>
            </div>
        }
    }
</div>