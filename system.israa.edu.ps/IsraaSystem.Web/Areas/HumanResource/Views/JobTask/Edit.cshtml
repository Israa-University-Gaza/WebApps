@model IsraaSystem.Core.Classic.HumanResource.Job.JobTask
@{
    Layout = null;
}

<div id="edit-job-task" class="modal-content">
    @if (TempData["add-msg"] != null)
    {
        int status = Convert.ToInt32(TempData["add-msg"].ToString().Split(';')[0]);
        String msg = TempData["add-msg"].ToString().Split(';')[1];
        <script type="text/javascript">
            showToast("@msg", "@((status > 0) ? "success":"error")");
        </script>
        if (status > 0)
        {
            <script type="text/javascript">
               $("#job-tasks").load("/HumanResource/JobTask/List/@Model.JobID");
            </script>
        }
    }
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">تعديل المهمة الخاصة بالوظيفة</h4>
    </div>
    <div class="modal-body modal-form">
        <div id="edit-job-task" class="portlet-body form">
            @{
                AjaxOptions opt = new AjaxOptions
                {
                    InsertionMode = InsertionMode.ReplaceWith,
                    HttpMethod = "POST",
                    UpdateTargetId = "edit-job-task"
                };
            }
            @using (Ajax.BeginForm("Edit", "JobTask", opt, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-body">
                    <div class="form-group">
                        <div class="col-md-12">
                            @if (TempData["add-msg"] != null)
                            {
                                int status = Convert.ToInt32(TempData["add-msg"].ToString().Split(';')[0]);
                                String msg = TempData["add-msg"].ToString().Split(';')[1];
                            <script type="text/javascript">
                                    showToast("@msg", "@((status > 0) ? "success":"error")");
                            </script>
                            }
                        </div>
                    </div>
                    @Html.HiddenFor(model => model.JobID)
                    <div class="form-group">
                        <label class="col-md-3 control-label">مهام الوظيفة باللغة العربية</label>
                        <div class="col-md-8">
                            @Html.TextAreaFor(model => model.ArName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ArName, "", new { @class = "text-danger help-block" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">مهام الوظيفة باللغة الإنجليزية</label>
                        <div class="col-md-8">
                            @Html.TextAreaFor(model => model.EnName, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-offset-3 col-md-8">
                            <button type="submit" class="btn btn-primary">إضافة</button>
                            <button type="button" class="btn btn-danger" data-dismiss="modal">إلغاء</button>
                            <a href="/HumanResource/JobTask/Add?jobId=@Model.JobID" class="btn btn-success pull-right" data-ajax="true" data-ajax-method="Get" data-ajax-mode="replace-with" data-ajax-update="#add-job-task">مهمة جديدة</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
