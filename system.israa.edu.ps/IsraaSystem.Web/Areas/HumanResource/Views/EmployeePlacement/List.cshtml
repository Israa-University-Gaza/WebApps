@using System.Data
@model IsraaSystem.Core.Classic.HumanResource.EmployeePlacement.EmployeePlacementVM

@{
    Layout = null;
}

<div id="all-employee-placement">
    <div id="refresh-list"></div>
    @{
        AjaxOptions opt = new AjaxOptions
        {
            InsertionMode = InsertionMode.ReplaceWith,
            HttpMethod = "POST",
            UpdateTargetId = "all-employee-placement"
        };
    }
    @using (Ajax.BeginForm("List", "EmployeePlacement", opt, new { @id = "form-employee-placement" }))
    {
        <div class="form">
            <div class="form-horizontal">
                @Html.AntiForgeryToken()
                <div class="form-body">
                    <div class="form-group">
                        <label class="col-md-2 control-label">الموظف</label>
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.filter.EmployeeName, new { @class = "form-control text-center", placeholder = "رقم أو اسم الموظف", onchange= "$('#form-employee-placement').submit();" })
                        </div>
                        <label class="col-md-2 control-label">الموظف المسؤول</label>
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.filter.EmployeeDMName, new { @class = "form-control text-center", placeholder = "رقم أو اسم الموظف المسؤول", onchange = "$('#form-employee-placement').submit();" })
                        </div>
                        <div class="col-md-offset-1 col-md-1">
                            @Html.DropDownListFor(model => model.pagging.pageSize, new SelectList(new Dictionary<string, int> { { "25", 25 }, { "50", 50 }, { "75", 75 }, { "100", 100 } }, "Key", "Value"), new { @class = "form-control pull-right", onchange = "$('#current-page').val('1');$(this).submit();" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">القسم</label>
                        <div class="col-md-3">
                            @Html.DropDownListFor(model => model.filter.DepartmentID, new SelectList(Model.filter.Departments, "Value", "Text"), "جميع الأقسام", new { @class = "form-control select2", onchange = "$('#form-employee-placement').submit();" })
                        </div>
                        <label class="col-md-2 control-label">الوظائف</label>
                        <div class="col-md-3">
                            @Html.DropDownListFor(model => model.filter.JobID, new SelectList(Model.filter.Jobs, "Value", "Text"), "جميع الوظائف", new { @class = "form-control select2", onchange = "$('#form-employee-placement').submit();" })
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn blue">تصفية</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br />
        if (Model.data != null && Model.data.Rows.Count > 0)
        {
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th class="wp5">#</th>
                        <th class="wp20">اسم الموظف</th>
                        <th class="wp20 text-center">القسم</th>
                        <th class="wp10 text-center">الوظيفة</th>
                        <th class="wp10 text-center">حالة الإنتساب</th>
                        <th class="wp10 text-center">نوع الإنتساب</th>
                        <th class="wp10 text-center">من</th>
                        <th class="wp10 text-center">إلى</th>
                        <th class="wp5 text-center">فعال</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (DataRow row in Model.data.Rows)
                    {
                        <tr>
                            <td>@row["RowNo"]</td>
                            <td><a href="/HumanResource/Employee/Index/@row["EmployeeID"]">@row["EmployeeName"]</a></td>
                            <td class="text-center">@row["DepartmentName"]</td>
                            <td class="text-center">@row["JobTitle"]</td>
                            <td class="text-center">@row["PlacementStatus"]</td>
                            <td class="text-center">@row["PlacementType"]</td>
                            <td class="text-center">@row["DateFrom"]</td>
                            <td class="text-center">@row["DateTo"]</td>
                            <td class="text-center">
                                <input type="checkbox" @(Convert.ToBoolean(row["IsActive"]) ? "checked='checked'" : "" ) disabled="disabled" />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            @Html.Partial("_paging", Model.pagging)
        }
        else
        {
            <div class="alert alert-info alert-dismissible text-center" role="alert">
                <span>لا يوجد بيانات لعرضها</span>
            </div>
        }
    }
</div>