@model IsraaSystem.Core.Classic.HumanResource.AttendanceExit.AttendanceExitEdit

@{
    Layout = null;
}
<div id="update-exit-permission" class="modal-content">
    @if (TempData["update-msg"] != null)
    {
        int status = Convert.ToInt32(TempData["update-msg"].ToString().Split(';')[0]);
        String msg = TempData["update-msg"].ToString().Split(';')[1];
        <script type="text/javascript">
            showToast("@msg", "@((status > 0) ? "success":"error")");
        </script>
        if (status > 0)
        {
            <script type="text/javascript">
                $('.modal').modal('hide');
                $('#form-attendance-exit').submit();
            </script>
        }
    }
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">تعديل وقت الإذن </h4>
    </div>
    <div class="modal-body modal-form">
        <div class="portlet-body form">
            @{
                AjaxOptions opt = new AjaxOptions
                {
                    InsertionMode = InsertionMode.ReplaceWith,
                    HttpMethod = "POST",
                    UpdateTargetId = "update-exit-permission"
                };
            }
            @using (Ajax.BeginForm("TimeUpdate", "AttendanceExit", opt, new { @class = "form-horizontal" }))
            {

                @Html.AntiForgeryToken()

                <div class="form-body">
                    <div class="form-group">
                        <label class="col-md-3 control-label">الموظف</label>
                        <div class="col-md-8">
                            @Html.TextBoxFor(model => model.EmployeeName, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">نوع الإذن</label>
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.AttendanceExitType, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                        <label class="col-md-2 control-label">تاريخ الإذن</label>
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.ExitDate, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">ساعة الخروج المتوقعة</label>
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.ExpectedTimeFrom, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                        <label class="col-md-2 control-label">ساعة العودة المتوقعة</label>
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.ExpectedTimeTo, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">ساعة الخروج الفعلية</label>
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.ActualTimeFrom, new { @class = "form-control" })
                        </div>
                        <label class="col-md-2 control-label">ساعة العودة الفعلية</label>
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.ActualTimeTo, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-offset-3 col-md-9">
                            <input type="submit" class="btn btn-primary" value="حفظ">
                            <button type="button" class="btn btn-danger" data-dismiss="modal">إلغاء</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>