@using System.Data
@model IsraaSystem.Core.Classic.HumanResource.EmpEmploymentType.EmpEmploymentTypeVM

@{
    Layout = null;
}

<div id="emp-employment-types">
    <div id="refresh-list"></div>
    @if (TempData["toast-msg"] != null)
    {
        int status = Convert.ToInt32(TempData["toast-msg"].ToString().Split(';')[0]);
        String msg = TempData["toast-msg"].ToString().Split(';')[1];
        <script type="text/javascript">
            showToast("@msg", "@((status > 0) ? "success":"error")");
        </script>
    }
    @{
        AjaxOptions opt = new AjaxOptions
        {
            InsertionMode = InsertionMode.ReplaceWith,
            HttpMethod = "POST",
            UpdateTargetId = "emp-employment-types"
        };
    }
    @using (Ajax.BeginForm("List", null, opt, new { @id = "form-emp-employment-type" }))
    {
        <div class="form">
            <div class="form-horizontal">
                @Html.AntiForgeryToken()
                <div class="form-body">
                    <div class="form-group">
                        <label class="col-md-1 control-label">الموظف</label>
                        <div class="col-md-2">
                            @Html.TextBoxFor(model => model.filter.EmployeeName, new { @class = "form-control text-center", placeholder = "رقم أو اسم الموظف" })
                        </div>
                        <label class="col-md-2 control-label">نوع التوظيف</label>
                        <div class="col-md-3">
                            @Html.DropDownListFor(model => model.filter.EmploymentTypeID, new SelectList(Model.filter.EmploymentTypes, "Value", "Text"), "جميع أنواع التوظيف", new { @class = "form-control" })
                        </div>
                        <label class="col-md-1 control-label">حالة الموظف</label>
                        <div class="col-md-2">
                            @Html.DropDownListFor(model => model.filter.EmployeeStatusID, new SelectList(Model.filter.EmployeeStatuses, "Value", "Text"), "جميع الحالات", new { @class = "form-control" })
                        </div>
                        <div class="col-md-1">
                            @Html.DropDownListFor(model => model.pagging.pageSize, new SelectList(new Dictionary<string, int> { { "25", 25 }, { "50", 50 }, { "75", 75 }, { "100", 100 } }, "Key", "Value"), new { @class = "form-control pull-right", onchange = "$('#current-page').val('1');$(this).submit();" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-1 col-md-2">
                            <button type="submit" class="btn blue">تصفية</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br />
        if (Model.data != null && Model.data.Rows.Count > 0)
        {
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th class="wp5">#</th>
                        <th class="wp10">رقم الموظف</th>
                        <th class="wp15">الموظف</th>
                        <th class="wp20 text-center">نوع التوظيف</th>
                        <th class="wp10 text-center">رقم الموظف</th>
                        <th class="wp10 text-center">من تاريخ</th>
                        <th class="wp10 text-center">إلى تاريخ</th>
                        <th class="wp10 text-center"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (DataRow row in Model.data.Rows)
                    {
                        <tr>
                            <td>@row["RowNo"]</td>
                            <td>@row["EmployeeNo"]</td>
                            <td><a href="/HumanResource/Employee/Index/@row["EmployeeID"]">@row["EmployeeName"]</a></td>
                            <td class="text-center">@row["EmploymentType"]</td>
                            <td class="text-center">@row["EmpEmploymentNo"]</td>
                            <td class="text-center">@row["DateFrom"]</td>
                            <td class="text-center">@row["DateTo"]</td>
                            <td class="text-center">
                                <a href="/HumanResource/EmpEmploymentType/Edit/@row["ID"]" class="btn btn-sm btn-primary pop-up-lg"><span class="fa fa-edit"></span></a>
                                <a href="/HumanResource/EmpEmploymentType/Delete/@row["ID"]" class="btn btn-sm btn-danger confirm" data-title="حذف نوع التعيين" data-msg="هل أنت متأكد من أنك تود حذف نوع التعيين ؟" data-action="حذف" data-ajax-update="#refresh-list"><span class="fa fa-times"></span></a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            @Html.Partial("_paging", Model.pagging)
        }
        else
        {
            <div class="alert alert-info alert-dismissible text-center" role="alert">
                <span>لا يوجد بيانات لعرضها</span>
            </div>
        }
    }
</div>