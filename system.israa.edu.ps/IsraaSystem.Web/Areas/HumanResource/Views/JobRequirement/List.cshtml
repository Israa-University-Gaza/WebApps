@using System.Data
@model DataTable

@{
    Layout = null;
}

<div id="job-personal">
    @if (TempData["tost-msg"] != null)
    {
        int status = Convert.ToInt32(TempData["tost-msg"].ToString().Split(';')[0]);
        String msg = TempData["tost-msg"].ToString().Split(';')[1];
        <script type="text/javascript">
            showToast("@msg", "@((status > 0) ? "success":"error")");
        </script>
    }
    <div class="row">
        <div class="col-md-5" style="border-left:2px solid #ddd;height:250px;">
            @if (Model.Rows.Count > 0)
            {
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th class="wp3"></th>
                            <th class="wp3">#</th>
                            <th class="text-center">المواصفات الشخصية</th>
                            <th class="wp5 text-center"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (DataRow row in Model.Rows)
                {
                            <tr>
                                <td class="text-center">
                                    <a href="/HumanResource/JobRequirement/JobRequirementList?jobpersonalId=@row["ID"]&jobId=@row["JobID"]" style="font-size:larger;color:blueviolet;" data-ajax="true" data-ajax-method="Post" data-ajax-mode="replace-with" data-ajax-update="#job-requirement"><i class="fa fa-folder-open-o"></i></a>
                                </td>
                                <td>@row["RowNo"]</td>
                                <td class="text-center">@row["Name"]</td>
                                <td class="text-center">
                                    <a href="/HumanResource/JobRequirement/JobRequirementAdd?jobpersonalId=@row["ID"]&jobId=@row["JobID"]" class="btn btn-sm btn-primary pop-up-md"><i class="fa fa-plus"></i> إضافة متطلب شغل الوظيفة</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info alert-dismissible text-center" role="alert">
                    <span>لا يوجد بيانات لعرضها</span>
                </div>
            }
        </div>
        <div class="col-md-7">
            <div id="job-requirement" style="padding-top:100px;">
                <div class="alert alert-info text-center" role="alert">
                    <span>اختر المواصفة الشخصية لعرض متطلباتها</span>
                </div>
            </div>
        </div>
    </div>
</div>