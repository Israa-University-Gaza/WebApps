@using System.Data
@model DataTable

@{
    Layout = null;
}

<div id="job-requirement">
    <div id="refresh-list"></div>
    @if (Model.Rows.Count > 0)
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th class="wp3">#</th>
                    <th class="text-center">المواصفات الضرورية</th>
                    <th class="text-center">المواصفات المفضلة</th>
                    <th class="wp15 text-center"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (DataRow row in Model.Rows)
                {
                    <tr>
                        <td>@row["RowNo"]</td>
                        <td class="text-center">
                            <input type="text" class="form-control" value="@row["Required"]" readonly="readonly" />
                        </td>
                        <td class="text-center">
                            <input type="text" class="form-control" value="@row["Favorite"]" readonly="readonly" />
                        </td>
                        <td class="text-center">
                            <a href="/HumanResource/JobRequirement/JobRequirementEdit/@row["ID"]" class="btn btn-xs btn-primary pop-up-md"><i class="fa fa-edit"></i></a>
                            <a href="/HumanResource/JobRequirement/Delete/@row["ID"]" class="btn btn-xs btn-danger confirm" data-title="حذف متطلب" data-msg="هل أنت متأكد من أنك تود حذف متطلب اشغال الوظيفة ؟" data-action="حذف" data-ajax-update="#refresh-list"><span class="fa fa-times"></span></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info alert-dismissible text-center" role="alert">
            <span>لا يوجد بيانات لعرضها</span>
        </div>
    }
</div>
