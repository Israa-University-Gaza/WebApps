@using System.Data
@model DataTable
@{
    ViewBag.Title = "شؤون الموظفين - أنواع المستندات";
    ViewBag.Menu = "#menu-employee-document";
    Layout = "~/Areas/HumanResource/Views/Shared/_Layout.cshtml";
}


@section PageBreadcrumb{
    <li>
        <a>الرئيسية</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <a>المستندات</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <a>أنواع المستندات</a>
    </li>
}

<div class="row">
    <div class="col-md-12">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-social-dribbble font-green"></i>
                    <span class="caption-subject font-green bold uppercase">أنواع المستندات</span>
                </div>
                <div class="actions">
                    <a href="/HumanResource/DocumentType/Add" class="btn btn-sm btn-success pop-up-md">
                        <i class="fa fa-plus"></i>
                        إضافة نوع مستند جديد
                    </a>
                </div>
            </div>
            <div class="portlet-body">
                @Html.Partial("List", Model)
            </div>
        </div>
    </div>
</div>


