@model IsraaSystem.Core.Classic.HumanResource.Salary.EmployeeDeduction

@{
    Layout = null;
}

<div id="edit-employee-deduction" class="modal-content">
    @if (TempData["add-msg"] != null)
    {
        int status = Convert.ToInt32(TempData["add-msg"].ToString().Split(';')[0]);
        String msg = TempData["add-msg"].ToString().Split(';')[1];
        <script type="text/javascript">
            showToast("@msg", "@((status > 0) ? "success":"error")");
        </script>
        if (status > 0)
        {
            <script type="text/javascript">
                $('.modal').modal('hide');
                $('#form-employee-deduction').submit();
            </script>
        }
    }
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">تعديل خصمية الموظف</h4>
    </div>
    <div class="modal-body modal-form">
        <div class="portlet-body form">
            @{
                AjaxOptions opt = new AjaxOptions
                {
                    InsertionMode = InsertionMode.ReplaceWith,
                    HttpMethod = "POST",
                    UpdateTargetId = "edit-employee-deduction"
                };
            }
            @using (Ajax.BeginForm("Edit", null, opt, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                
                <div class="form-body">
                    <div class="form-group">
                        <div class="note note-info">
                            @*<h4 class="block">ملاحظة هامة!!</h4>*@
                            <p><i class="fa fa-bell-o"></i> تعديل عدد أيام الخصمية يعني ترحيل بقية الأيام للشهر التالي. </p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">عدد أيام الحالي</label>
                        <div class="col-md-2">
                            @Html.TextBoxFor(model => model.DeductionDays, new { @class = "form-control text-center", @readonly = "readonly" })
                        </div>
                        <label class="col-md-3 control-label">عدد الأيام المراد خصمها</label>
                        <div class="col-md-2">
                            @Html.TextBoxFor(model => model.PostponeDays, new { @class = "form-control text-center" })
                            <label id="toster" class="text-danger control-label"></label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">ملاحظات</label>
                        <div class="col-md-7">
                            @Html.TextAreaFor(model => model.Note, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Note, "", new { @class = "text-danger help-block" })
                        </div>
                    </div>
                </div>
                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-offset-2 col-md-8">
                            <button id="submit" type="submit" class="btn btn-primary">حفظ</button>
                            <button type="button" class="btn btn-danger" data-dismiss="modal">إلغاء</button>
                            <a href="/HumanResource/EmployeeDeduction/Add" class="btn btn-success pull-right" data-ajax="true" data-ajax-method="Get" data-ajax-mode="replace-with" data-ajax-update="#edit-employee-deduction">خصمية جديدة</a>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</div>
<script type="text/javascript">
    $("#PostponeDays").on("change paste keyup", function () {
        if ((parseInt($('#PostponeDays').val()) < 0)) {
            $("#toster").text("لا يمكن اضافة عدد ايام مرحلة أقل من صفر");
        }
        else if ((parseInt($('#PostponeDays').val()) > parseInt($('#DeductionDays').val()))) {
            $("#toster").text("لا يمكن اضافة عدد ايام مرحلة أكبر من عدد الأيام الحالي");
        }
        else {
            $("#toster").text("");
        }
    });
