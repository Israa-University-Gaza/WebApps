@model IsraaSystem.Core.HumanResource.ExitPermissions.ExitPermissionType

@{
    Layout = null;
}

<script type="text/javascript">
    function updateData() {
        $("#exit-permission-type").load("/HumanResource/ExitPermissionType/Data");
    }
</script>
<div id="add-exit-permission-type" class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">إضافة نوع إذن جديد</h4>
    </div>
    <div class="modal-body modal-form">
        <div id="add-exit-permission-type" class="portlet-body form">
            @using (Ajax.BeginForm("Add", "ExitPermissionType",
                                                    new AjaxOptions
                                                    {
                                                        InsertionMode = InsertionMode.ReplaceWith,
                                                        HttpMethod = "POST",
                                                        UpdateTargetId = "add-exit-permission-type",
                                                        OnSuccess = "updateData"
                                                    }, new { @class = "form-horizontal" }))
            {

                @Html.AntiForgeryToken()

                <div class="form-body">
                    <div class="form-group">
                        <div class="col-md-12">
                            @if (TempData["add-msg"] != null)
                            {
                                int status = Convert.ToInt32(TempData["add-msg"].ToString().Split(';')[0]);
                                String msg = TempData["add-msg"].ToString().Split(';')[1];
                                <script type="text/javascript">
                                    showToast("@msg", "@((status > 0) ? "success":"error")");
                                </script>
                            }
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">نوع الأذن</label>
                        <div class="col-md-8">
                            @Html.TextBoxFor(model => model.ArName, new { @class = "form-control date-picker" })
                            @Html.ValidationMessageFor(model => model.ArName, "", new { @class = "text-danger help-block" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">نوع الأذن</label>
                        <div class="col-md-8">
                            @Html.TextBoxFor(model => model.EnName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.EnName, "", new { @class = "text-danger help-block" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">آلية الخصم</label>
                        <div class="col-md-8">
                            @Html.DropDownListFor(model => model.DeductionStatusID, new SelectList(Model.DeductionStatuses), "إختر آلية الخصم", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.DeductionStatusID, "", new { @class = "text-danger help-block" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">فعال</label>
                        <div class="col-md-8">
                            @Html.CheckBoxFor(model => model.IsActive)
                        </div>
                    </div>
                </div>
                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-offset-3 col-md-8">
                            <input type="submit" class="btn btn-primary" value="حفظ">
                            <button type="button" class="btn btn-danger" data-dismiss="modal">إلغاء</button>
                            @Ajax.ActionLink("نوع جديد", "Add", null, new AjaxOptions
                       {
                           InsertionMode = InsertionMode.ReplaceWith,
                           HttpMethod = "Get",
                           UpdateTargetId = "add-exit-permission-type"
                       }, new { @class = "btn btn-success pull-right" })
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>