@model IsraaSystem.Core.Classic.HumanResource.EmployeeLanguage.EmployeeLanguage

@{
    Layout = null;
}

<div id="add-employee-language" class="modal-content">
    @if (TempData["add-msg"] != null)
    {
        int status = Convert.ToInt32(TempData["add-msg"].ToString().Split(';')[0]);
        String msg = TempData["add-msg"].ToString().Split(';')[1];
        <script type="text/javascript">
            showToast("@msg", "@((status > 0) ? "success":"error")");
        </script>
        if (status > 0)
        {
            <script type="text/javascript">
                $('.modal').modal('hide');
                $("#employee-page").load("/HumanResource/EmployeeLanguage/EmployeeList/@Model.EmployeeID");
            </script>
        }
    }

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">إضافة لغة جديدة</h4>
    </div>
    <div class="modal-body modal-form">
        <div class="portlet-body form">
            @{
                AjaxOptions opt = new AjaxOptions
                {
                    InsertionMode = InsertionMode.ReplaceWith,
                    HttpMethod = "POST",
                    UpdateTargetId = "add-employee-language"
                };
            }
            @using (Ajax.BeginForm("EmployeeAdd", null, opt, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-body">
                    @Html.HiddenFor(model => model.EmployeeID)
                    <div class="form-group">
                        <label class="col-md-2 control-label">اللغة</label>
                        <div class="col-md-8">
                            @Html.DropDownListFor(model => model.languageID, new SelectList(Model.languages, "Value", "Text"), "إختر اللغة", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.languageID, "", new { @class = "text-danger help-block" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">مستوى القراءة</label>
                        <div class="col-md-8">
                            @Html.DropDownListFor(model => model.ReadingKnowLevelID, new SelectList(Model.ReadingKnowLevels, "Value", "Text"), "إختر مستوى القراءة", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ReadingKnowLevelID, "", new { @class = "text-danger help-block" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">مستوى الكتابة</label>
                        <div class="col-md-8">
                            @Html.DropDownListFor(model => model.WritingKnowLevelID, new SelectList(Model.WritingKnowLevels, "Value", "Text"), "إختر مستوى الكتابة", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.WritingKnowLevelID, "", new { @class = "text-danger help-block" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">مستوى التحدث</label>
                        <div class="col-md-8">
                            @Html.DropDownListFor(model => model.SpeakingKnowLevelID, new SelectList(Model.SpeakingKnowLevels, "Value", "Text"), "إختر مستوى التحدث", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.SpeakingKnowLevelID, "", new { @class = "text-danger help-block" })
                        </div>
                    </div>
                </div>
                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-offset-2 col-md-8">
                            <input type="submit" class="btn btn-primary" value="حفظ">
                            <button type="button" class="btn btn-danger" data-dismiss="modal">إلغاء</button>
                            <a href="/HumanResource/EmployeeLanguage/EmployeeAdd?empId=@Model.EmployeeID" class="btn btn-success pull-right" data-ajax="true" data-ajax-method="Get" data-ajax-mode="replace-with" data-ajax-update="#add-employee-language">لغة جديدة</a>
                    
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>