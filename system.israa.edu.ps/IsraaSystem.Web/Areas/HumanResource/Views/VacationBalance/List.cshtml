@using System.Data
@model IsraaSystem.Core.Classic.HumanResource.Vacation.VacationBalanceVM

@{
    Layout = null;
}

<div id="vacation-balance">
    <div id="refresh-list"></div>
    @{
        AjaxOptions opt = new AjaxOptions
        {
            InsertionMode = InsertionMode.ReplaceWith,
            HttpMethod = "POST",
            UpdateTargetId = "vacation-balance"
        };
    }

    @using (Ajax.BeginForm("List", "VacationBalance", opt, new { @id = "form-vacation-balance" }))
    {
        <div class="form">
            <div class="form-horizontal">
                @Html.AntiForgeryToken()
                <div class="form-body">
                    <div class="form-group">
                        <label class="col-md-1 control-label">الموظف</label>
                        <div class="col-md-2">
                            @Html.TextBoxFor(model => model.filter.EmployeeName, new { @class = "form-control text-center", placeholder = "رقم أو اسم الموظف" })
                        </div>
                        <label class="col-md-1 control-label">سنة الاجازة</label>
                        <div class="col-md-2">
                            @Html.DropDownListFor(model => model.filter.VacationBalanceYearID, new SelectList(Model.filter.VacationBalanceYears, "Value", "Text"), "جميع سنوات الإجازة", new { @class = "form-control" })
                        </div>
                        <label class="col-md-1 control-label">نوع الإجازة</label>
                        <div class="col-md-2">
                            @Html.DropDownListFor(model => model.filter.VacationTypeID, new SelectList(Model.filter.VacationTypes, "Value", "Text"), "جميع أنواع الإجازات", new { @class = "form-control" })
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn blue">تصفية</button>
                        </div>
                        <div class="col-md-1">
                            @Html.DropDownListFor(model => model.pagging.pageSize, new SelectList(new Dictionary<string, int> { { "25", 25 }, { "50", 50 }, { "75", 75 }, { "100", 100 } }, "Key", "Value"), new { @class = "form-control pull-left", onchange = "$('#current-page').val('1');$(this).submit();" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br />
        if (Model.data != null && Model.data.Rows.Count > 0)
        {
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th class="wp3">#</th>
                        <th class="wp7 text-center">رقم الموظف</th>
                        <th class="wp15">اسم الموظف</th>
                        <th class="wp8 text-center">نوع الإجازة</th>
                        <th class="wp8 text-center">من</th>
                        <th class="wp8 text-center">الى</th>
                        <th class="wp7 text-center">مرحل</th>
                        <th class="wp7 text-center">افتراضي</th>
                        <th class="wp7 text-center">إجازة</th>
                        <th class="wp7 text-center">غياب</th>
                        <th class="wp6 text-center">تأخير</th>
                        <th class="wp5 text-center">مستنفذ</th>
                        <th class="wp5 text-center">متبقي</th>
                        <th class="wp5 text-center">خصمت من الراتب</th>
                        <th class="wp5 text-center">متبقي للخصم من الراتب</th>
                        <th class="wp5 text-center"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (DataRow row in Model.data.Rows)
                    {
                        <tr>
                            <td>@row["RowNo"]</td>
                            <td class="text-center">@row["EmployeeNo"]</td>
                            <td><a href="/HumanResource/Employee/Index/@row["EmployeeID"]">@row["EmployeeName"]</a></td>
                            <td class="text-center">@row["VacationType"]</td>
                            <td class="text-center">@row["DateFrom"]</td>
                            <td class="text-center">@row["DateTo"]</td>
                            <td class="text-center">@row["PostponeDays"]</td>
                            <td class="text-center">@row["DefualtDays"]</td>
                            <td class="text-center">@row["VacationDays"]</td>
                            <td class="text-center">@row["AbsenceDays"]</td>
                            <td class="text-center">@row["OutDays"]</td>
                            <td class="text-center">@row["ConsumedDays"]</td>
                            <td class="text-center">@row["RemainingDays"]</td>
                            <td class="text-center">@row["SalaryDayDeduction"]</td>
                            <td class="text-center">@row["RemainSalaryDayDeduction"]</td>
                            <td class="text-center">
                                @if (String.IsNullOrEmpty(row["Note"].ToString()))
                                {
                                    <a href="/HumanResource/VacationBalance/Edit/@row["ID"]" class="btn btn-sm btn-primary pop-up-lg"><span class="fa fa-edit"></span></a>
                                }
                                else
                                {
                                    <a href="/HumanResource/VacationBalance/Edit/@row["ID"]" class="btn btn-sm btn-primary pop-up-lg"><span class="fa fa-edit"></span></a>
                                    <a href="/HumanResource/VacationBalance/Details/@row["ID"]" class="btn btn-sm btn-warning pop-up-md"><span class="fa fa-list"></span></a>
                                }
                            </td>

                        </tr>
                    }
                </tbody>
            </table>

            @Html.Partial("_paging", Model.pagging)
        }
        else
        {
            <div class="alert alert-info alert-dismissible text-center" role="alert">
                <span>لا يوجد بيانات لعرضها</span>
            </div>
        }
    }
</div>