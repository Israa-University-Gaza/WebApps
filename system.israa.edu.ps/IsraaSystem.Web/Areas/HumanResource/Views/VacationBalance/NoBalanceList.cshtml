@using System.Data
@model IsraaSystem.Core.Classic.HumanResource.Vacation.VacationBalanceVM

@{
    Layout = null;
}
<div id="no-vacation-balance">
    <div id="refresh-list"></div>
    @{
        AjaxOptions opt = new AjaxOptions
        {
            InsertionMode = InsertionMode.ReplaceWith,
            HttpMethod = "POST",
            UpdateTargetId = "no-vacation-balance"
        };
    }

    @using (Ajax.BeginForm("NoBalanceList", null, opt, new { @id = "form-vacation-balance" }))
    {
        <div class="form">
            <div class="form-horizontal">
                @Html.AntiForgeryToken()
                <div class="form-body">
                    <div class="form-group">
                        <label class="col-md-1 control-label">الموظف</label>
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.filter.EmployeeName, new { @class = "form-control text-center", placeholder = "رقم أو اسم الموظف" })
                        </div>
                        <label class="col-md-1 control-label">سنة الاجازة</label>
                        <div class="col-md-3">
                            @Html.DropDownListFor(model => model.filter.VacationBalanceYearID, new SelectList(Model.filter.VacationBalanceYears, "Value", "Text"), new { @class = "form-control input-change" })
                        </div>
                        <div class="col-md-3">
                            <button type="submit" class="btn blue">تصفية</button>
                        </div>
                        <div class="col-md-1">
                            @Html.DropDownListFor(model => model.pagging.pageSize, new SelectList(new Dictionary<string, int> { { "25", 25 }, { "50", 50 }, { "75", 75 }, { "100", 100 } }, "Key", "Value"), new { @class = "form-control pull-left", onchange = "$('#current-page').val('1');$(this).submit();" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br />

        if (Model.data != null && Model.data.Rows.Count > 0)
        {

            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th class="wp10">#</th>
                        <th class="wp30 text-center">رقم الموظف</th>
                        <th class="wp60 text-center">اسم الموظف</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (DataRow row in Model.data.Rows)
                    {
                        <tr>
                            <td>@row["RowNo"]</td>
                            <td class="text-center">@row["EmployeeNo"]</td>
                            <td class="text-center"><a href="/HumanResource/Employee/Index/@row["ID"]">@row["EmployeeName"]</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            @Html.Partial("_paging", Model.pagging)
        }
        else
        {
            <div class="alert alert-info alert-dismissible text-center" role="alert">
                <span>لا يوجد بيانات لعرضها</span>
            </div>
        }
    }
</div>
