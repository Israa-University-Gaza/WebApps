@model IsraaSystem.Core.Classic.HumanResource.Vacation.VacationBalance

@{
    Layout = null;
}
<div id="add-vacation-balance" class="modal-content">
    @if (TempData["add-msg"] != null)
    {
        int status = Convert.ToInt32(TempData["add-msg"].ToString().Split(';')[0]);
        String msg = TempData["add-msg"].ToString().Split(';')[1];
        <script type="text/javascript">
            showToast("@msg", "@((status > 0) ? "success":"error")");
        </script>
        if (status > 0)
        {
            <script type="text/javascript">
                $('.modal').modal('hide');
                $('#form-vacation-balance').submit();
            </script>
        }
    }
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">إضافة رصيد اجازة</h4>
    </div>
    <div class="modal-body modal-form">
        <div class="portlet-body form">
            @{
                AjaxOptions opt = new AjaxOptions
                {
                    InsertionMode = InsertionMode.ReplaceWith,
                    HttpMethod = "POST",
                    UpdateTargetId = "add-vacation-balance"
                };
            }
            @using (Ajax.BeginForm("Add", "VacationBalance", opt, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-body">
                    <div class="form-group">
                        <label class="col-md-3 control-label">الموظف</label>
                        <div class="col-md-8">
                            @Html.DropDownListFor(model => model.EmployeeID, new SelectList(Model.Employees, "Value", "Text"), "إختر الموظف", new { @class = "form-control select2" })
                            @Html.ValidationMessageFor(model => model.EmployeeID, "", new { @class = "text-danger help-block" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label">سنة الرصيد</label>
                        <div class="col-md-8">
                            @Html.DropDownListFor(model => model.VacationBalanceYearID, new SelectList(Model.VacationBalanceYears, "Value", "Text"), "إختر سنة الرصيد", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.VacationBalanceYearID, "", new { @class = "text-danger help-block" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">تاريخ بدء الرصيد</label>
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.DateFrom, new { @class = "form-control text-center date-picker", placeholder = "yyyy/MM/dd" })
                            @Html.ValidationMessageFor(model => model.DateFrom, "", new { @class = "text-danger help-block" })
                        </div>
                        <label class="col-md-2 control-label">تاريخ نهاية الرصيد</label>
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.DateTo, new { @class = "form-control text-center date-picker", placeholder = "yyyy/MM/dd" })
                            @Html.ValidationMessageFor(model => model.DateTo, "", new { @class = "text-danger help-block" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">الرصيد المرحل</label>
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.PostponeDays, new { @class = "form-control text-center" })
                            @Html.ValidationMessageFor(model => model.PostponeDays, "", new { @class = "text-danger help-block" })
                        </div>
                        <label class="col-md-2 control-label">الرصيد الافتراضي</label>
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.DefualtDays, new { @class = "form-control text-center" })
                            @Html.ValidationMessageFor(model => model.DefualtDays, "", new { @class = "text-danger help-block" })
                        </div>
                    </div>
                </div>
                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-offset-3 col-md-8">
                            <button type="submit" class="btn btn-primary">إضافة</button>
                            <button type="button" class="btn btn-danger" data-dismiss="modal">إلغاء</button>
                            <a href="/HumanResource/VacationBalance/Add" class="btn btn-success pull-right" data-ajax="true" data-ajax-method="Get" data-ajax-mode="replace-with" data-ajax-update="#add-vacation-balance">رصيد جديد</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>