@using System.Data
@model IsraaSystem.Core.Classic.HumanResource.Attendance.EmployeeAttendanceLateVM

@{
    Layout = null;
}

<div id="employee-attendance-late">
    @{
        AjaxOptions opt = new AjaxOptions
        {
            InsertionMode = InsertionMode.ReplaceWith,
            HttpMethod = "POST",
            UpdateTargetId = "employee-attendance-late"
        };
    }

    @using (Ajax.BeginForm("List", "EmployeeAttendanceLate", opt, new { @id = "form-employee-attendance-late" }))
    {
        <div class="form">
            <div class="form-horizontal">
                @Html.AntiForgeryToken()
                <div class="form-body">
                    <div class="form-group">
                        <label class="col-md-2 control-label">الموظف</label>
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.filter.EmployeeName, new { @class = "form-control text-center", placeholder = "اسم أو رقم الموظف" })
                        </div>
                        <label class="col-md-2 control-label">نوع التأخير</label>
                        <div class="col-md-3">
                            @Html.DropDownListFor(model => model.filter.LateTypeID, new SelectList(Model.filter.LateTypes, "Value", "Text"), "جميع التأخيرت", new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">من</label>
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.filter.DateFrom, new { @class = "form-control date-picker text-center", placeholder = "من" })
                        </div>
                        <label class="col-md-2 control-label">إلى</label>
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.filter.DateTo, new { @class = "form-control date-picker text-center", placeholder = "إلى" })
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn blue">تصفية</button>
                        </div>
                    </div>
                </div>
            </div>
            <br />
            @if (Model.data != null && Model.data.Rows.Count > 0)
            {
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th class="wp3">#</th>
                            <th class="wp10 text-center">رقم الموظف</th>
                            <th class="wp15 text-center">اسم الموظف</th>
                            <th class="wp10 text-center">التاريخ</th>
                            <th class="wp10 text-center">اليوم</th>
                            <th class="wp15 text-center">الدوام الإفتراضي من - إلى</th>
                            <th class="wp15 text-center">الدوام الفعلي من - إلى</th>
                            <th class="wp7 text-center">نوع التأخير</th>
                            <th class="wp7 text-center">د.ت.صباحي</th>
                            <th class="wp7 text-center">د.ت.مسائي</th>


                        </tr>
                    </thead>
                    <tbody>
                        @foreach (DataRow row in Model.data.Rows)
                    {
                            <tr>
                                <td>@row["RowNo"]</td>
                                <td class="text-center">@row["EmployeeNo"]</td>
                                <td class="text-center"><a href="/HumanResource/Employee/Index/@row["EmployeeID"]">@row["EmployeeName"]</a></td>
                                <td class="text-center">@row["AttendanceDate"]</td>
                                <td class="text-center">@row["DateDayName"]</td>
                                <td class="text-center">@row["DefaultTime"]</td>
                                <td class="text-center">@row["AttendanceTime"]</td>
                                <td class="text-center">@row["LateType"]</td>
                                <td class="text-center">@row["MorningLateMinutes"]</td>
                                <td class="text-center">@row["EveningLateMinutes"]</td>
                            </tr>
                        }
                    </tbody>
                </table>
                @Html.Partial("_paging", Model.pagging)
            }
            else
            {
                <div class="alert alert-info alert-dismissible text-center" role="alert">
                    <span>لا يوجد بيانات لعرضها</span>
                </div>
            }
        </div>
    }
</div>