@using System.Data
@model IsraaSystem.Core.Classic.HumanResource.Attendance.EmployeesDateStatusVM

@{
    Layout = null;
}

<div id="employee-date-status">
    @{
        AjaxOptions opt = new AjaxOptions
        {
            InsertionMode = InsertionMode.ReplaceWith,
            HttpMethod = "POST",
            UpdateTargetId = "employee-date-status"
        };
    }

    @using (Ajax.BeginForm("List", "EmployeesDateStatus", opt, new { @id = "form-employee-date-status" }))
    {
        <div class="form">
            <div class="form-horizontal">
                @Html.AntiForgeryToken()
                <div class="form-body">
                    <div class="form-group">
                        <label class="col-md-2 control-label">الموظف</label>
                        <div class="col-md-8">
                            @Html.TextBoxFor(model => model.filter.EmployeeName, new { @class = "form-control text-center", placeholder = "اسم أو رقم الموظف" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">من</label>
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.filter.AttendanceDate, new { @class = "form-control date-picker text-center", placeholder = "التاريخ" })
                        </div>
                        <label class="col-md-2 control-label">حالة اليوم</label>
                        <div class="col-md-3">
                            @Html.DropDownListFor(model => model.filter.DayStatusID, new SelectList(Model.filter.DayStatuses, "Value", "Text"), "جميع الحالات اليومية", new { @class = "form-control" })
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn blue">تصفية</button>
                        </div>
                    </div>
                </div>
            </div>
            <br />
            @if (Model.data != null && Model.data.Rows.Count > 0)
            {
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th class="wp5">#</th>
                            <th class="wp15 text-center">رقم الموظف</th>
                            <th class="wp30 text-center">الموظف</th>
                            <th class="wp15 text-center">دوامه من</th>
                            <th class="wp15 text-center">دوامه إلى</th>
                            <th class="wp20 text-center">حالة الموظف هذا اليوم</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (DataRow row in Model.data.Rows)
                    {
                            <tr>
                                <td>@row["RowNo"]</td>
                                <td class="text-center">@row["EmployeeNo"]</td>
                                <td class="text-center"><a href="/HumanResource/Employee/Index/@row["EmployeeID"]">@row["EmployeeName"]</a></td>
                                <td class="text-center">@row["AttendanceFrom"]</td>
                                <td class="text-center">@row["AttendanceTo"]</td>
                                <td class="text-center">@row["DayStatus"]</td>
                            </tr>
                        }
                    </tbody>
                </table>
                @Html.Partial("_paging", Model.pagging)
            }
            else
            {
                <div class="alert alert-info alert-dismissible text-center" role="alert">
                    <span>لا يوجد بيانات لعرضها</span>
                </div>
            }
        </div>
    }
</div>