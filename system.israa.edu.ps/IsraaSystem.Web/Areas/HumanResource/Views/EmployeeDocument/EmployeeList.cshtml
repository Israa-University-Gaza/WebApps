@using System.Data
@model IsraaSystem.Core.Classic.HumanResource.Document.EmployeeDocumentsVM

@{
    Layout = null;
}

<div id="employee-page">
    <script type="text/javascript">
        setMenu('#menu-employee-document');
    </script>
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-globe theme-font hide"></i>
                        <span class="caption-subject font-blue-madison bold uppercase">مستندات الموظف</span>
                    </div>
                    <div class="actions">
                        <a href="/HumanResource/EmployeeDocument/EmployeeAdd/@Model.filter.EmployeeID" class="btn btn-primary pop-up-md">إضافة مستند جديد</a>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="row">
                        <div class="col-md-12">
                            @if (Model.data != null && Model.data.Rows.Count > 0)
                            {
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th class="wp5">#</th>
                                            <th class="wp60">المستند</th>
                                            <th class="wp15 text-center">تاريخ المستند</th>
                                            <th class="wp15 text-center">تاريخ الإضافة</th>
                                            <th class="wp20"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (DataRow row in Model.data.Rows)
                                        {
                                            <tr>
                                                <td>@row["RowNo"]</td>
                                                <td><a href="@row["DocumentURL"]">@row["DocumentType"]</a></td>
                                                <td class="text-center">@row["DocumentDate"]</td>
                                                <td class="text-center">@row["InsertDate"]</td>
                                                <td class="text-center">
                                                    <a href="/HumanResource/EmployeeDocument/Delete/@row["ID"]" class="btn btn-sm btn-danger confirm" data-title="حذف المستند" data-msg="هل أنت متأكد من أنك تود حذف المستند ؟" data-action="حذف" data-ajax-update="#employee-page"><i class="fa fa-times"></i> حذف</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <div class="alert alert-info alert-dismissible text-center" role="alert">
                                    <span>لا يوجد بيانات لعرضها</span>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>