@using System.Data
@model IsraaSystem.Core.Classic.HumanResource.EmployeeTrainingCourse.EmployeeTrainingCourseVM

@{
  Layout = null;
}

<div id="employee-page">
  <div id="employee-training-course">
    @if (TempData["toast-msg"] != null)
    {
      int status = Convert.ToInt32(TempData["toast-msg"].ToString().Split(';')[0]);
      String msg = TempData["toast-msg"].ToString().Split(';')[1];
      <script type="text/javascript">
      showToast("@msg", "@((status > 0) ? "success" : "error")");
      </script>
    }
    <script type="text/javascript">
      setMenu('#menu-employee-training-course');
    </script>
    <div class="row">
      <div class="col-md-12">
        <div class="portlet light bordered">
          <div class="portlet-title">
            <div class="caption">
              <i class="icon-globe theme-font hide"></i>
              <span class="caption-subject font-blue-madison bold uppercase">الدورات التدريبية</span>
            </div>
            <div class="actions">
              <a href="/HumanResource/EmployeeTrainingCourse/EmployeeAdd?empId=@Model.filter.EmployeeID" class="btn btn-primary pop-up-lg">إضافة بيانات جديدة</a>
            </div>
          </div>
          <div class="portlet-body">
            <div class="row">
              <div class="col-md-12">
                @if (Model.data != null && Model.data.Rows.Count > 0)
                {
                  <table class="table table-striped table-hover">
                    <thead>
                      <tr>
                        <th class="wp5">#</th>
                        <th class="wp20">اسم الكورس</th>
                        <th class="wp20 text-center">المؤسسة</th>
                        <th class="wp20 text-center">التخصص</th>
                        <th class="wp10 text-center">عدد الساعات</th>
                        <th class="wp25 text-center"></th>
                      </tr>
                    </thead>
                    <tbody>
                      @foreach (DataRow row in Model.data.Rows)
                      {
                        <tr>
                          <td>@row["RowNo"]</td>
                          <td>@row["CourseName"]</td>
                          <td class="text-center">@row["CourseOrganisers"]</td>
                          <td class="text-center">@row["CourseSpecialization"]</td>
                          <td class="text-center">@row["CourseHours"]</td>
                          <td class="text-center">
                            <a href="/HumanResource/EmployeeTrainingCourse/EmployeeEdit/@row["ID"]" class="btn btn-sm btn-primary pop-up-lg"><i class="fa fa-edit"></i> تعديل</a>

                            <a href="/HumanResource/EmployeeTrainingCourse/Delete/@row["ID"]"
                               class="btn btn-sm btn-danger confirm"
                               data-title="حذف دورة تدريبية"
                               data-msg="هل أنت متأكد من أنك تود حذف الدورة التدريبية ؟"
                               data-action="حذف"
                               data-ajax="true"
                               data-ajax-method="POST"
                               data-ajax-mode="replace-with"
                               data-ajax-update="#employee-training-course">

                              <i class="fa fa-times"></i> حذف
                            </a>
                          </td>
                        </tr>
                      }
                    </tbody>
                  </table>
                }
                else
                {
                  <div class="alert alert-info alert-dismissible text-center" role="alert">
                    <span>لا يوجد بيانات لعرضها</span>
                  </div>
                }
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


</div>