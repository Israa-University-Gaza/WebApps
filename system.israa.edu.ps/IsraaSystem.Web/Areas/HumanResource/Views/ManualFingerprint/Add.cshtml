@model IsraaSystem.Core.Classic.HumanResource.ManualFingerprint.ManualFingerprint

@{
    Layout = null;
}

<div id="add-manual-fingerprint" class="modal-content">
    @if (TempData["add-msg"] != null)
    {
        int status = Convert.ToInt32(TempData["add-msg"].ToString().Split(';')[0]);
        String msg = TempData["add-msg"].ToString().Split(';')[1];
        <script type="text/javascript">
            showToast("@msg", "@((status > 0) ? "success":"error")");
        </script>
        if (status > 0)
        {
            <script type="text/javascript">
                $('.modal').modal('hide');
                $('#form-manual-fingerprint').submit();
            </script>
        }
    }
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">إضافة بصمة يدوية</h4>
    </div>
    <div class="modal-body modal-form">
        <div class="portlet-body form">
            @{
                AjaxOptions opt = new AjaxOptions
                {
                    InsertionMode = InsertionMode.ReplaceWith,
                    HttpMethod = "POST",
                    UpdateTargetId = "add-manual-fingerprint"
                };
            }
            @using (Ajax.BeginForm("Add", null, opt, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
            <div class="form-body">
                <div class="form-group">
                    <label class="col-md-2 control-label">الموظف</label>
                    <div class="col-md-8">
                        @Html.DropDownListFor(model => model.EmployeeID, new SelectList(Model.Employees, "Value", "Text"), "إختر الموظف", new { @class = "form-control select2" })
                        @Html.ValidationMessageFor(model => model.EmployeeID, "", new { @class = "text-danger help-block" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">نوع البصمة</label>
                    <div class="col-md-8">
                        @Html.DropDownListFor(model => model.FingerprintTypeID, new SelectList(Model.FingerprintTypes, "Value", "Text"), "إختر نوع البصمة", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.FingerprintTypeID, "", new { @class = "text-danger help-block" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">الفرع</label>
                    <div class="col-md-8">
                        @Html.DropDownListFor(model => model.BranchID, new SelectList(Model.Branch, "Value", "Text"), "إختر الفرع", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.FingerprintTypeID, "", new { @class = "text-danger help-block" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">تاريخ البصمة</label>
                    <div class="col-md-3">
                        @Html.TextBoxFor(model => model.FingerprintDate, new { @class = "form-control text-center date-picker" })
                        @Html.ValidationMessageFor(model => model.FingerprintDate, "", new { @class = "text-danger help-block" })
                    </div>

                    <label class="col-md-2 control-label">ساعة البصمة</label>
                    <div class="col-md-3">
                        @Html.TextBoxFor(model => model.FingerprintTime, new { @class = "form-control text-center" })
                        @Html.ValidationMessageFor(model => model.FingerprintTime, "", new { @class = "text-danger help-block" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">ملاحظات</label>
                    <div class="col-md-8">
                        @Html.TextAreaFor(model => model.Note, new { @class = "form-control" })
                        @*@Html.ValidationMessageFor(model => model.Note, "", new { @class = "text-danger help-block" })*@
                    </div>
                </div>
            </div>
                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-offset-2 col-md-8">
                            <input type="submit" class="btn btn-primary" value="حفظ">
                            <button type="button" class="btn btn-danger" data-dismiss="modal">إلغاء</button>
                            <a href="/HumanResource/ManualFingerprint/Add" class="btn btn-success pull-right" data-ajax="true" data-ajax-method="Get" data-ajax-mode="replace-with" data-ajax-update="#add-manual-fingerprint">بصمة جديدة</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>