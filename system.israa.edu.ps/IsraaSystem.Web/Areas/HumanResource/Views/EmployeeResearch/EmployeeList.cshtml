@using System.Data
@model IsraaSystem.Core.Classic.HumanResource.EmployeeResearch.EmployeeResearchVM

@{
    Layout = null;
}

<div id="employee-page">
    @if (TempData["toast-msg"] != null)
    {
        int status = Convert.ToInt32(TempData["toast-msg"].ToString().Split(';')[0]);
        String msg = TempData["toast-msg"].ToString().Split(';')[1];
        <script type="text/javascript">
            showToast("@msg", "@((status > 0) ? "success":"error")");
        </script>
    }
    <script type="text/javascript">
        setMenu('#menu-employee-research');
    </script>
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-globe theme-font hide"></i>
                        <span class="caption-subject font-blue-madison bold uppercase">البحوث العلمية والمؤتمرات</span>
                    </div>
                    <div class="actions">
                        <a href="/HumanResource/EmployeeResearch/EmployeeAdd?empId=@Model.filter.EmployeeID" class="btn btn-primary pop-up-md">إضافة بحث علمي جديد</a>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="row">
                        <div class="col-md-12">
                            @if (Model.data != null && Model.data.Rows.Count > 0)
                            {
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th class="wp5">#</th>
                                            <th class="wp30">عنوان البحث</th>
                                            <th class="wp20 text-center">الجهة المقدمة لها</th>
                                            <th class="wp20 text-center">تاريخ البحث</th>
                                            <th class="wp25"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (DataRow row in Model.data.Rows)
                                        {
                                            <tr>
                                                <td>@row["RowNo"]</td>
                                                <td>@row["ResearchTitle"]</td>
                                                <td class="text-center">@row["ResearchOrganization"]</td>
                                                <td class="text-center">@row["ResearchDate"]</td>
                                                <td class="text-center">
                                                    <a href="/HumanResource/EmployeeResearch/EmployeeEdit/@row["ID"]" class="btn btn-sm btn-primary pop-up-md"><i class="fa fa-edit"></i> تعديل</a>
                                                    <a href="/HumanResource/EmployeeResearch/Delete/@row["ID"]" class="btn btn-sm btn-danger confirm" data-title="حذف بحث علمي" data-msg="هل أنت متأكد من أنك تود حذف البحث العلمي للموظف ؟" data-action="حذف" data-ajax-update="#employee-page"><i class="fa fa-times"></i> حذف</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <div class="alert alert-info alert-dismissible text-center" role="alert">
                                    <span>لا يوجد بيانات لعرضها</span>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>