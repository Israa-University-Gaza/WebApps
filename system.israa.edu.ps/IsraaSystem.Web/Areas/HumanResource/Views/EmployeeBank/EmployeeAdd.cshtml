@model IsraaSystem.Core.Classic.HumanResource.EmployeeBank.EmployeeBank

@{
    Layout = null;
}

<div id="add-employee-bank" class="modal-content">
    @if (TempData["add-msg"] != null)
    {
        int status = Convert.ToInt32(TempData["add-msg"].ToString().Split(';')[0]);
        String msg = TempData["add-msg"].ToString().Split(';')[1];
        <script type="text/javascript">
            showToast("@msg", "@((status > 0) ? "success":"error")");
        </script>
        if (status > 0)
        {
            <script type="text/javascript">
                $('.modal').modal('hide');
                $("#employee-page").load("/HumanResource/EmployeeBank/EmployeeList/@Model.EmployeeID");
            </script>
        }
    }


    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">إضافة بيانات بنك جديدة</h4>
    </div>
    <div class="modal-body modal-form">
        <div class="portlet-body form">
       
                @{
                    AjaxOptions opt = new AjaxOptions
                    {
                        InsertionMode = InsertionMode.ReplaceWith,
                        HttpMethod = "POST",
                        UpdateTargetId = "add-employee-bank"
                    };
                }
                    @using (Ajax.BeginForm("EmployeeAdd", null, opt, new { @class = "form-horizontal" }))
                    {

                        @Html.AntiForgeryToken()
                <div class="form-body">
                    @Html.HiddenFor(model => model.EmployeeID)
                    <div class="form-group">
                        <label class="col-md-2 control-label">اسم البنك</label>
                        <div class="col-md-8">
                            @Html.DropDownListFor(model => model.BankID, new SelectList(Model.Banks, "Value", "Text"), "إختر اسم البنك", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.BankID, "", new { @class = "text-danger help-block" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">رقم الحساب</label>
                        <div class="col-md-8">
                            @Html.TextBoxFor(model => model.BankNo, new { @class = "form-control text-center" })
                            @Html.ValidationMessageFor(model => model.BankNo, "", new { @class = "text-danger help-block" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">فرع البنك</label>
                        <div class="col-md-8">
                            @Html.TextBoxFor(model => model.BankBranch, new { @class = "form-control text-center" })
                            @Html.ValidationMessageFor(model => model.BankBranch, "", new { @class = "text-danger help-block" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">ملاحظات</label>
                        <div class="col-md-8">
                            @Html.TextAreaFor(model => model.Note, new { @class = "form-control text-center" })
                        </div>
                    </div>
                </div>
                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-offset-2 col-md-8">
                            <input type="submit" class="btn btn-primary" value="حفظ">
                            <button type="button" class="btn btn-danger" data-dismiss="modal">إلغاء</button>
                            <a href="/HumanResource/EmployeeBank/EmployeeAdd?empId=@Model.EmployeeID" class="btn btn-success pull-right" data-ajax="true" data-ajax-method="Get" data-ajax-mode="replace-with" data-ajax-update="#add-employee-bank">بيانات بنك جديدة</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>