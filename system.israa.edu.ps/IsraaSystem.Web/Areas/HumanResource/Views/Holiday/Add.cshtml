@model IsraaSystem.Core.Classic.HumanResource.Holiday.Holiday

@{
    Layout = null;
}

<div id="add-holiday" class="modal-content">
    @if (TempData["add-msg"] != null)
    {
        int status = Convert.ToInt32(TempData["add-msg"].ToString().Split(';')[0]);
        String msg = TempData["add-msg"].ToString().Split(';')[1];
        <script type="text/javascript">
            showToast("@msg", "@((status > 0) ? "success":"error")");
        </script>
        if (status > 0)
        {
            <script type="text/javascript">
                $('.modal').modal('hide');
                $('#form-holiday').submit();
            </script>
        }
    }
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">إضافة عطلة رسمية جديدة</h4>
    </div>
    <div class="modal-body modal-form">
        <div class="portlet-body form">
            @{
                AjaxOptions opt = new AjaxOptions
                {
                    InsertionMode = InsertionMode.ReplaceWith,
                    HttpMethod = "POST",
                    UpdateTargetId = "add-holiday"
                };
            }
            @using (Ajax.BeginForm("Add", "Holiday", opt, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-body">
                    <div class="form-group">
                        <label class="col-md-3 control-label">عنوان العطلة</label>
                        <div class="col-md-8">
                            @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger help-block" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">نوع العطلة</label>
                        <div class="col-md-8">
                            @Html.DropDownListFor(model => model.HolidayTypeID, new SelectList(Model.HolidayTypes, "Value", "Text"), "إختر نوع العطلة", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.HolidayTypeID, "", new { @class = "text-danger help-block" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">بداية العطلة</label>
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.DateFrom, new { @class = "form-control date-picker" })
                            @Html.ValidationMessageFor(model => model.DateFrom, "", new { @class = "text-danger help-block" })
                        </div>
                        <label class="col-md-2 control-label">نهاية العطلة</label>
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.DateTo, new { @class = "form-control date-picker" })
                            @Html.ValidationMessageFor(model => model.DateTo, "", new { @class = "text-danger help-block" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">ملاحظات</label>
                        <div class="col-md-8">
                            @Html.TextAreaFor(model => model.Notes, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">فعال</label>
                        <div class="col-md-8">
                            @Html.CheckBoxFor(model => model.IsActive)
                        </div>
                    </div>
                </div>
                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-offset-3 col-md-8">
                            <button type="submit" class="btn btn-primary">إضافة</button>
                            <button type="button" class="btn btn-danger" data-dismiss="modal">إلغاء</button>
                            <a href="/HumanResource/Holiday/Add" class="btn btn-success pull-right" data-ajax="true" data-ajax-method="Get" data-ajax-mode="replace-with" data-ajax-update="#add-holiday">عطلة جديدة</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>