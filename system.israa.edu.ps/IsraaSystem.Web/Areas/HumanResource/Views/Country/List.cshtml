@using System.Data
@model DataTable

@{
    Layout = null;
}

@if (TempData["toast-msg"] != null)
{
    int status = Convert.ToInt32(TempData["toast-msg"].ToString().Split(';')[0]);
    String msg = TempData["toast-msg"].ToString().Split(';')[1];
    <script type="text/javascript">
        showToast("@msg", "@((status > 0) ? "success":"error")");
    </script>
}

    <div id="countres">
        @if (Model.Rows.Count > 0)
        {
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th class="wp5">#</th>
                        <th class="wp20 text-center">المدينة - عربي</th>
                        <th class="wp20 text-center">المدينة - انجليزي</th>
                        <th class="wp20"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (DataRow row in Model.Rows)
                    {
                        <tr>
                            <td>@row["RowNo"]</td>
                            <td class="text-center">@row["ArName"]</td>
                            <td class="text-center">@row["EnName"]</td>
                            <td class="text-center">
                                <a href="/HumanResource/Country/Edit/@row["ID"]" class="btn btn-sm btn-primary pop-up-md"><span class="fa fa-edit"></span></a>
                                <a href="/HumanResource/Country/Delete/@row["ID"]" class="btn btn-sm btn-danger confirm" data-title="حذف مدينة" data-msg="هل أنت متأكد من أنك تود حذف المدينة ؟" data-action="حذف" data-ajax-update="#countres"><span class="fa fa-times"></span></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info alert-dismissible text-center" role="alert">
                <span>لا يوجد بيانات لعرضها</span>
            </div>
        }
    </div>