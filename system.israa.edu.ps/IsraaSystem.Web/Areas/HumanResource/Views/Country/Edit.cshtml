@model IsraaSystem.Core.Classic.HumanResource.Country.Country
@{
    Layout = null;
}

<div id="edit-country" class="modal-content">
    @if (TempData["add-msg"] != null)
    {
        int status = Convert.ToInt32(TempData["add-msg"].ToString().Split(';')[0]);
        String msg = TempData["add-msg"].ToString().Split(';')[1];
        <script type="text/javascript">
            showToast("@msg", "@((status > 0) ? "success":"error")");
        </script>
        if (status > 0)
        {
            <script type="text/javascript">
                $('.modal').modal('hide');
                $("#countres").load("/HumanResource/Country/List");
            </script>
        }
    }
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">تعديل بيانات المدينة</h4>
    </div>
    <div class="modal-body modal-form">
        <div class="portlet-body form">
            @{
                AjaxOptions opt = new AjaxOptions
                {
                    InsertionMode = InsertionMode.ReplaceWith,
                    HttpMethod = "POST",
                    UpdateTargetId = "edit-country"
                };
            }
            @using (Ajax.BeginForm("Edit", null, opt, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()

            <div class="form-body">
                <div class="form-group">
                    <label class="col-md-3 control-label">المدينة - عربي</label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.ArName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ArName, "", new { @class = "text-danger help-block" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">المدينة - إنجليزي</label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.EnName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.EnName, "", new { @class = "text-danger help-block" })
                    </div>
                </div>
            </div>
                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-offset-2 col-md-8">
                            <button type="submit" class="btn btn-primary">تعديل</button>
                            <button type="button" class="btn btn-danger" data-dismiss="modal">إلغاء</button>
                            <a href="/HumanResource/Country/Add" class="btn btn-success pull-right" data-ajax="true" data-ajax-method="Get" data-ajax-mode="replace-with" data-ajax-update="#edit-country">مدينة جديدة</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>