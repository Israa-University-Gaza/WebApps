@using System.Data
@model IsraaSystem.Core.Classic.HumanResource.Attendance.EmployeeDateRangeStatusVM

@{
    Layout = null;
}

<div id="employee-date-range-status">
    @{
        AjaxOptions opt = new AjaxOptions
        {
            InsertionMode = InsertionMode.ReplaceWith,
            HttpMethod = "POST",
            UpdateTargetId = "employee-date-range-status"
        };
    }

    @using (Ajax.BeginForm("List", "EmployeeDateRangeStatus", opt, new { @id = "form-employee-date-range-status" }))
    {
        <div class="form">
            <div class="form-horizontal">
                @Html.AntiForgeryToken()
                <div class="form-body">
                    <div class="form-group">
                        <label class="col-md-2 control-label">الموظف</label>
                        <div class="col-md-3">
                            @Html.DropDownListFor(model => model.filter.EmployeeID, new SelectList(Model.filter.Employees, "Value", "Text"), "إختر الموظف", new { @class = "form-control select2" })
                        </div>
                        <label class="col-md-2 control-label">حالة اليوم</label>
                        <div class="col-md-3">
                            @Html.DropDownListFor(model => model.filter.DayStatusID, new SelectList(Model.filter.DayStatuses, "Value", "Text"), "جميع الحالات", new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">من</label>
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.filter.DateFrom, new { @class = "form-control date-picker text-center", placeholder = "من" })
                        </div>
                        <label class="col-md-2 control-label">إلى</label>
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.filter.DateTo, new { @class = "form-control date-picker text-center", placeholder = "إلى" })
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn blue">تصفية</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br />
        if (Model.data != null && Model.data.Rows.Count > 0)
        {
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th class="wp5">#</th>
                        <th class="wp10 text-center">رقم الموظف</th>
                        <th class="wp20 text-center">الموظف</th>
                        <th class="wp12 text-center">التاريخ</th>
                        <th class="wp12 text-center">اليوم</th>
                        <th class="wp15 text-center">دوامه من</th>
                        <th class="wp15 text-center">دوامه إلى</th>
                        <th class="wp15 text-center">حالة اليوم</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (DataRow row in Model.data.Rows)
                    {
                        <tr>
                            <td>@row["RowNo"]</td>
                            <td class="text-center">@row["EmployeeNo"]</td>
                            <td class="text-center"><a href="/HumanResource/Employee/Index/@row["EmployeeID"]">@row["EmployeeName"]</a></td>
                            <td class="text-center">@row["Date"]</td>
                            <td class="text-center">@row["DateDayName"]</td>
                            <td class="text-center">@row["AttendanceFrom"]</td>
                            <td class="text-center">@row["AttendanceTo"]</td>
                            <td class="text-center">@row["DayStatus"]</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info alert-dismissible text-center" role="alert">
                <span>لا يوجد بيانات لعرضها</span>
            </div>
        }
    }
</div>