@model IsraaSystem.Core.Classic.HumanResource.EmployeeFamily.EmployeeFamily

@{
    Layout = null;
}

<div id="add-employee-family" class="modal-content">
    @if (TempData["add-msg"] != null)
    {
        int status = Convert.ToInt32(TempData["add-msg"].ToString().Split(';')[0]);
        String msg = TempData["add-msg"].ToString().Split(';')[1];
        <script type="text/javascript">
            showToast("@msg", "@((status > 0) ? "success":"error")");
        </script>
        if (status > 0)
        {
            <script type="text/javascript">
                $('.modal').modal('hide');
                $("#employee-page").load("/HumanResource/EmployeeFamily/EmployeeList/@Model.EmployeeID");
            </script>
        }
    }
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">إضافة صلة قرابة جديد</h4>
    </div>
    <div class="modal-body modal-form">
        <div class="portlet-body form">
            @{
                AjaxOptions opt = new AjaxOptions
                {
                    InsertionMode = InsertionMode.ReplaceWith,
                    HttpMethod = "POST",
                    UpdateTargetId = "add-employee-family"
                };
            }
            @using (Ajax.BeginForm("EmployeeAdd", null, opt, new { @class = "form-horizontal" }))
            {

                @Html.AntiForgeryToken()

                <div class="form-body">

                    @Html.HiddenFor(model => model.EmployeeID)
                    <div class="form-group">
                        <label class="col-md-2 control-label">الإسم رباعي</label>
                        <div class="col-md-2">
                            @Html.TextBoxFor(model => model.ArFirstName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ArFirstName, "", new { @class = "text-danger help-block" })
                        </div>
                        <div class="col-md-2">
                            @Html.TextBoxFor(model => model.ArSecoundName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ArSecoundName, "", new { @class = "text-danger help-block" })
                        </div>
                        <div class="col-md-2">
                            @Html.TextBoxFor(model => model.ArThirdName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ArThirdName, "", new { @class = "text-danger help-block" })
                        </div>
                        <div class="col-md-2">
                            @Html.TextBoxFor(model => model.ArFamilyName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ArFamilyName, "", new { @class = "text-danger help-block" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">مكان الميلاد</label>
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.PlaceOfBirth, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.PlaceOfBirth, "", new { @class = "text-danger help-block" })
                        </div>
                        <label class="col-md-2 control-label">تاريخ الميلاد</label>
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.DateOfBirth, new { @class = "form-control date-picker" })
                            @Html.ValidationMessageFor(model => model.DateOfBirth, "", new { @class = "text-danger help-block" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">رقم الهوية</label>
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.SSN, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.SSN, "", new { @class = "text-danger help-block" })
                        </div>
                        <label class="col-md-2 control-label">الجنس</label>
                        <div class="col-md-3">
                            @Html.DropDownListFor(model => model.GenderID, new SelectList(Model.Genders, "Value", "Text"), "إختر الجنس", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.GenderID, "", new { @class = "text-danger help-block" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">الحالة الإجتماعية</label>
                        <div class="col-md-3">
                            @Html.DropDownListFor(model => model.MaritalStatusID, new SelectList(Model.MaritalStatuses, "Value", "Text"), "إختر الحالة الإجتماعية", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MaritalStatusID, "", new { @class = "text-danger help-block" })
                        </div>
                        <label class="col-md-2 control-label">تاريخ الزواج</label>
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.MarriageDate, new { @class = "form-control date-picker" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">حالة الفرد</label>
                        <div class="col-md-3">
                            @Html.DropDownListFor(model => model.PersonStatusID, new SelectList(Model.PersonStatuses, "Value", "Text"), "إختر حالة الفرد", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.PersonStatusID, "", new { @class = "text-danger help-block" })
                        </div>

                        <label class="col-md-2 control-label">تاريخ الوفاة</label>
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.DeathDate, new { @class = "form-control date-picker" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-2 control-label">صلة القرابة</label>
                        <div class="col-md-3">
                            @Html.DropDownListFor(model => model.RelativeTypeID, new SelectList(Model.RelativeTypes, "Value", "Text"), "إختر صلة القرابة", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.RelativeTypeID, "", new { @class = "text-danger help-block" })
                        </div>

                    </div>
                </div>
                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-offset-2 col-md-8">
                            <input type="submit" class="btn btn-primary" value="حفظ">
                            <button type="button" class="btn btn-danger" data-dismiss="modal">إلغاء</button>
                            <a href="/HumanResource/EmployeeFamily/EmployeeAdd?empId=@Model.EmployeeID" class="btn btn-success pull-right" data-ajax="true" data-ajax-method="Get" data-ajax-mode="replace-with" data-ajax-update="#add-employee-family">صلة قرابة جديدة</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>