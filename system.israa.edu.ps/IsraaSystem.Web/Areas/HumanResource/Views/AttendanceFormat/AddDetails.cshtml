@model IsraaSystem.Core.Classic.HumanResource.Attendance.AttendanceFormatDetails
@{
    Layout = null;
}
    <div id="add-attendance-format" class="modal-content">
        <script type="text/javascript">
        function updateData() {
            $("#attendance-formats").load("/HumanResource/AttendanceFormat/ListDetails");
        }
        </script>
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">إضافة نسق جديد</h4>
        </div>
        <div class="modal-body modal-form">
            <div class="portlet-body form">
                @using (Ajax.BeginForm("AddDetails", "AttendanceFormat",
                                                        new AjaxOptions
                                                        {
                                                            InsertionMode = InsertionMode.ReplaceWith,
                                                            HttpMethod = "POST",
                                                            UpdateTargetId = "add-attendance-format",
                                                            OnSuccess = "updateData"
                                                        }, new { @class = "form-horizontal" }))
                {

                    @Html.AntiForgeryToken()

                <div class="form-body">
                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.HiddenFor(x=>x.AttendanceFormatID)
                            @if (TempData["add-msg"] != null)
                            {
                                int status = Convert.ToInt32(TempData["add-msg"].ToString().Split(';')[0]);
                                String msg = TempData["add-msg"].ToString().Split(';')[1];
                                <script type="text/javascript">
                                    showToast("@msg", "@((status > 0) ? "success":"error")");
                                </script>
                            }
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">اليوم</label>
                        <div class="col-md-8">
                            @Html.DropDownListFor(model => model.DayID, new SelectList(Model.Days, "Value", "Text"), new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.DayID, "", new { @class = "text-danger help-block" })

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">التاريخ من</label>
                        <div class="col-md-8">
                            @Html.TextBoxFor(model => model.AttendanceFrom, new { @class = "form-control time-picker" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label">إلى</label>
                        <div class="col-md-8">
                            @Html.TextBoxFor(model => model.AttendanceTo, new { @class = "form-control time-picker",placeholder="HH:MM:SS" })
                        </div>
                    </div>

                </div>
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-offset-3 col-md-8">
                                <input type="submit" class="btn btn-primary" value="حفظ">
                                <button type="button" class="btn btn-danger" data-dismiss="modal">إلغاء</button>
                                @Ajax.ActionLink(" دوام جديد", "AddDetails", null, new AjaxOptions
                           {
                               InsertionMode = InsertionMode.ReplaceWith,
                               HttpMethod = "Get",
                               UpdateTargetId = "add-attendance-format"
                           }, new { @class = "btn btn-success pull-right" })
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>