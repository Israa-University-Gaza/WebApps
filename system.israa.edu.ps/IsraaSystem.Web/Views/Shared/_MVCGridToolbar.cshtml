@model IsraaSystem.Web.Models.MVCGridToolbarModel
@{
  string gridName = Model.MVCGridName;
}

<div class="row">
  <div class="col-md-9">
    <div class="form-inline">

      <div class="form-group">
        @if (Model.PageSize)
        {
          <label>
        حجم الصفحة :
          </label>
            <select class="form-control" data-mvcgrid-type="pageSize" data-mvcgrid-name="@(gridName)">
              <option value="10">10</option>
              <option value="25">25</option>
              <option value="50">50</option>
              <option value="100">100</option>
            </select>



        }
      </div>

      <div class="btn-group">
        @if (Model.ColumnVisibility)
        {
          <div class="btn-group">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
              <span class="glyphicon glyphicon-list" aria-hidden="true"></span> الحقول
            </button>
            <ul class="dropdown-menu" role="menu" data-mvcgrid-type="columnVisibilityList" data-mvcgrid-name="@(gridName)"></ul>
          </div>
        }
        @if (Model.Export)
        {
          <button class="btn btn-default" data-mvcgrid-type="export" data-mvcgrid-name="@(gridName)">
            <span class="glyphicon glyphicon-download-alt" aria-hidden="true"></span> تصدير
          </button>
        }
      </div>






    </div>
  </div>
  <div class="col-md-3">
    <div class="form-inline pull-right">


      @if (Model.GlobalSearch)
      {
        <span>&nbsp;</span>
        <div class="form-group">
          <label>
            بحث : <input type="search" placeholder="بحث" class="form-control"
                         data-mvcgrid-type="additionalQueryOption" data-mvcgrid-option="search" data-mvcgrid-name="@(gridName)"
                         data-mvcgrid-apply-additional="keyup">
          </label>
        </div>
      }
    </div>
  </div>
</div>
